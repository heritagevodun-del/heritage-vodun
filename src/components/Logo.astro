---
const { width = "45", height = "45" } = Astro.props;
---

<svg
  viewBox="0 0 100 100"
  width={width}
  height={height}
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class="logo-svg"
>
  <defs>
    <linearGradient
      id="bronzeStem"
      x1="47"
      y1="0"
      x2="53"
      y2="0"
      gradientUnits="userSpaceOnUse"
    >
      <stop offset="0%" stop-color="#8B4513"></stop>
      <stop offset="40%" stop-color="#E68A5C"></stop>
      <stop offset="60%" stop-color="#CD853F"></stop>
      <stop offset="100%" stop-color="#5D4037"></stop>
    </linearGradient>

    <linearGradient
      id="bronzeBase"
      x1="50"
      y1="85"
      x2="50"
      y2="92"
      gradientUnits="userSpaceOnUse"
    >
      <stop offset="0%" stop-color="#D2691E"></stop>
      <stop offset="100%" stop-color="#8B4513"></stop>
    </linearGradient>

    <radialGradient id="beadGrad" cx="50%" cy="40%" r="50%">
      <stop offset="0%" stop-color="#F4A460"></stop>
      <stop offset="100%" stop-color="#8B4513"></stop>
    </radialGradient>
  </defs>

  <circle
    cx="50"
    cy="50"
    r="45"
    fill="none"
    stroke="#C06C3B"
    stroke-width="0.5"
    opacity="0.4"
    stroke-dasharray="2 2"></circle>
  <circle
    cx="50"
    cy="50"
    r="42"
    fill="none"
    stroke="#C06C3B"
    stroke-width="0.2"
    opacity="0.2"></circle>

  <path
    d="M42 85 L58 85 L54 92 L46 92 Z"
    fill="url(#bronzeBase)"
    stroke="#5D4037"
    stroke-width="0.5"></path>

  <rect x="47" y="38" width="6" height="47" fill="url(#bronzeStem)"></rect>
  <rect x="47" y="38" width="6" height="2" fill="#000" opacity="0.3"></rect>

  <circle
    cx="50"
    cy="25"
    r="12"
    fill="none"
    stroke="url(#bronzeStem)"
    stroke-width="4"></circle>
  <circle
    cx="50"
    cy="25"
    r="13.5"
    fill="none"
    stroke="#5D4037"
    stroke-width="0.2"
    opacity="0.8"></circle>
  <circle
    cx="50"
    cy="25"
    r="10.5"
    fill="none"
    stroke="#5D4037"
    stroke-width="0.2"
    opacity="0.8"></circle>

  <line x1="50" y1="13" x2="50" y2="37" stroke="#8B4513" stroke-width="0.8"
  ></line>
  <line x1="38" y1="25" x2="62" y2="25" stroke="#8B4513" stroke-width="0.8"
  ></line>

  <circle
    cx="50"
    cy="25"
    r="3.5"
    fill="url(#beadGrad)"
    stroke="#5D4037"
    stroke-width="0.2"></circle>
  <circle cx="50" cy="11" r="2.8" fill="url(#beadGrad)"></circle>
  <circle cx="50" cy="39" r="2.8" fill="url(#beadGrad)"></circle>
  <circle cx="36" cy="25" r="2.8" fill="url(#beadGrad)"></circle>
  <circle cx="64" cy="25" r="2.8" fill="url(#beadGrad)"></circle>
</svg>

<style>
  .logo-svg {
    /* Ombre port√©e pour l'effet 3D */
    filter: drop-shadow(0 2px 4px rgba(139, 69, 19, 0.3));
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  /* Animation : Zoom majestueux au survol (plus classe que la rotation pour un sceptre) */
  :global(a:hover) .logo-svg {
    transform: scale(1.15);
  }
</style>
