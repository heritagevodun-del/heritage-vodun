<section class="newsletter-section">
  <div class="container">
    <div class="invitation-card">
      <div class="ornement-haut"></div>

      <div class="contenu">
        <span class="sous-titre">Le Cercle des Initiés</span>
        <h2>Restez connecté à la Source</h2>
        <p>
          Rejoignez-nous. Recevez les dates des cérémonies, la sagesse du Fâ et
          l'essence de nos traditions directement dans votre cœur (et votre
          boîte mail).
        </p>

        <form id="form-newsletter" class="formulaire">
          <input
            type="hidden"
            name="access_key"
            value="90fd8cd4-08c6-427b-9e44-ae19d6c3f487"
          />
          <input
            type="hidden"
            name="subject"
            value="Nouvel abonné Newsletter (Site Web)"
          />
          <input
            type="checkbox"
            name="botcheck"
            class="hidden"
            style="display: none;"
          />

          <div class="input-group">
            <input
              type="email"
              name="email"
              placeholder="Votre adresse email..."
              required
              class="champ-email"
              aria-label="Adresse email pour la newsletter"
            />
            <button type="submit" class="btn-inscription">
              <span class="btn-text">S'inscrire</span>
              <span class="btn-loader" style="display: none;">...</span>
            </button>
          </div>
          <p class="message-resultat" id="resultat-newsletter"></p>
        </form>

        <p class="rgpd">Nous respectons votre tranquillité. Pas de spam.</p>
      </div>

      <div class="ornement-bas"></div>
    </div>
  </div>
</section>

<script>
  // On utilise astro:page-load pour que le script se relance à chaque navigation
  document.addEventListener("astro:page-load", () => {
    const formNews = document.getElementById(
      "form-newsletter"
    ) as HTMLFormElement;
    const resNews = document.getElementById("resultat-newsletter");
    const btn = document.querySelector(".btn-inscription") as HTMLButtonElement;
    const btnText = document.querySelector(".btn-text") as HTMLElement;
    const btnLoader = document.querySelector(".btn-loader") as HTMLElement;

    // Sécurité : on ne lance le script que si le formulaire est présent sur la page
    if (formNews && resNews && btn) {
      formNews.addEventListener("submit", function (e) {
        e.preventDefault();
        const formData = new FormData(formNews);
        const object = Object.fromEntries(formData);
        const json = JSON.stringify(object);

        // Feedback visuel : On charge
        resNews.innerHTML = "";
        btn.disabled = true; // Empêche le double clic
        btn.style.opacity = "0.7";
        if (btnText) btnText.style.display = "none";
        if (btnLoader) btnLoader.style.display = "inline-block";

        fetch("https://api.web3forms.com/submit", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Accept: "application/json",
          },
          body: json,
        })
          .then(async (response) => {
            if (response.status == 200) {
              // SUCCÈS
              resNews.innerHTML =
                "✨ Merci. Votre inscription est confirmée. Bienvenue dans le Cercle.";
              resNews.style.color = "#2f4f4f";
              formNews.reset();
            } else {
              // ERREUR
              resNews.innerHTML =
                "Une erreur est survenue. Veuillez réessayer.";
              resNews.style.color = "#d9534f";
            }
          })
          .catch((error) => {
            resNews.innerHTML = "Erreur de connexion.";
            resNews.style.color = "#d9534f";
            console.error(error);
          })
          .finally(() => {
            // Remise à zéro du bouton
            btn.disabled = false;
            btn.style.opacity = "1";
            if (btnText) btnText.style.display = "inline";
            if (btnLoader) btnLoader.style.display = "none";
          });
      });
    }
  });
</script>

<style>
  /* --- Section Globale --- */
  .newsletter-section {
    padding: 80px 20px 100px;
    background: linear-gradient(to bottom, #ffffff, #fdfbf7);
    display: flex;
    justify-content: center;
  }

  .container {
    width: 100%;
    max-width: 800px;
  }

  /* --- La Carte "Invitation" --- */
  .invitation-card {
    background-color: #fffcf5;
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 8px;
    padding: 60px 40px;
    text-align: center;
    position: relative;
    box-shadow:
      0 10px 40px rgba(0, 0, 0, 0.05),
      0 0 20px rgba(212, 175, 55, 0.1);
    /* Optimisation GPU */
    will-change: transform, box-shadow;
    animation: breathing-glow 6s infinite ease-in-out;
  }

  /* Ornements */
  .ornement-haut::before,
  .ornement-bas::after {
    content: "✦";
    font-size: 1.5rem;
    color: #d4af37;
    display: block;
    margin-bottom: 20px;
  }
  .ornement-bas::after {
    margin-top: 20px;
    margin-bottom: 0;
  }

  /* --- Typographie --- */
  .sous-titre {
    color: #d4af37;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.8rem;
    font-weight: bold;
    display: block;
    margin-bottom: 15px;
  }

  h2 {
    font-family: "Playfair Display", serif;
    font-size: 2.5rem;
    color: #2f4f4f;
    margin-bottom: 20px;
  }

  p {
    font-family: "Lato", sans-serif;
    color: #666;
    line-height: 1.6;
    margin-bottom: 30px;
    font-size: 1.1rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* --- Formulaire --- */
  .input-group {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 500px;
    margin: 0 auto;
  }

  .champ-email {
    flex: 1;
    min-width: 250px;
    padding: 15px 20px;
    border-radius: 4px;
    border: 1px solid #e0e0e0;
    background-color: white;
    color: #333;
    font-family: "Lato", sans-serif;
    outline: none;
    transition: all 0.3s;
  }

  .champ-email:focus {
    border-color: #d4af37;
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }

  .btn-inscription {
    background-color: #d4af37;
    color: #1a1a1a;
    border: none;
    padding: 15px 30px;
    border-radius: 4px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s;
    border: 1px solid #d4af37;
    min-width: 140px; /* Pour éviter que le bouton change de taille pendant le chargement */
  }

  .btn-inscription:hover:not(:disabled) {
    background-color: transparent;
    color: #d4af37;
    transform: translateY(-2px);
  }

  .btn-inscription:disabled {
    cursor: not-allowed;
    filter: grayscale(0.5);
  }

  .rgpd {
    font-size: 0.8rem;
    color: #999;
    margin-top: 25px;
    margin-bottom: 0;
    font-style: italic;
  }

  .message-resultat {
    margin-top: 15px;
    font-weight: bold;
    min-height: 24px;
    transition: color 0.3s;
  }

  /* --- Animation --- */
  @keyframes breathing-glow {
    0%,
    100% {
      box-shadow:
        0 10px 40px rgba(0, 0, 0, 0.05),
        0 0 20px rgba(212, 175, 55, 0.1);
      border-color: rgba(212, 175, 55, 0.3);
    }
    50% {
      box-shadow:
        0 15px 50px rgba(0, 0, 0, 0.08),
        0 0 35px rgba(212, 175, 55, 0.3);
      border-color: rgba(212, 175, 55, 0.6);
    }
  }

  /* --- Mobile --- */
  @media (max-width: 768px) {
    .invitation-card {
      padding: 40px 20px;
    }
    h2 {
      font-size: 2rem;
    }
    .input-group {
      flex-direction: column;
    }
    .btn-inscription {
      width: 100%;
    }
  }
</style>
