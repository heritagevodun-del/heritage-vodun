<style>
  /* --- VARIABLES --- */
  :root {
    --or-vodun: #d4af37;
    --vert-profond: #1a2e2e;
  }

  .nav-links {
    display: flex;
    gap: 30px;
    align-items: center;
  }

  .nav-links a {
    color: #2f4f4f;
    text-decoration: none;
    font-family: "Lato", sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 1px;
    position: relative;
    transition: color 0.3s;
  }

  /* Soulignement animÃ© standard */
  .nav-links a:not(.special-link)::after,
  .nav-links a:not(.special-link)::before {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -5px;
    background-color: #c06c3b;
    transition: width 0.3s;
  }
  .nav-links a:not(.special-link)::after {
    left: 0;
  }
  .nav-links a:not(.special-link)::before {
    right: 0;
  }

  .nav-links a:not(.special-link):hover::after {
    width: 100%;
  }
  .nav-links a:hover {
    color: #c06c3b;
  }

  /* --- STYLE DU BOUTON ORACLE (DESKTOP) --- */
  a.special-link {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 20px;
    border-radius: 50px;
    border: 1px solid rgba(46, 204, 113, 0.3);
    color: #2f4f4f;
    transition: all 0.4s ease;
  }

  .oracle-text {
    font-size: 0.85rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Au survol Desktop : Ã‰lÃ©gance subtile */
  a.special-link:hover {
    border-color: var(--or-vodun);
    background-color: rgba(212, 175, 55, 0.05);
    color: var(--or-vodun);
    transform: translateY(-2px);
  }

  /* Le point d'Ã©tat (Vert = En ligne) */
  .dot {
    width: 8px;
    height: 8px;
    background-color: #2ecc71;
    border-radius: 50%;
    box-shadow: 0 0 0 0 rgba(46, 204, 113, 0.7);
    animation: pulse-green 2s infinite;
  }

  @keyframes pulse-green {
    0% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(46, 204, 113, 0.7);
    }
    70% {
      transform: scale(1);
      box-shadow: 0 0 0 6px rgba(46, 204, 113, 0);
    }
    100% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(46, 204, 113, 0);
    }
  }

  /* --- ðŸ“± MOBILE : VERSION PREMIUM & PRO --- */
  @media (max-width: 900px) {
    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(10px);
      flex-direction: column;
      padding: 30px 0;
      gap: 25px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
      display: none;
      opacity: 0;
      transform: translateY(-10px);
      transition: all 0.3s ease;
    }

    .nav-links.active {
      display: flex;
      opacity: 1;
      transform: translateY(0);
    }

    .nav-links a {
      font-size: 1.1rem;
      width: 100%;
      text-align: center;
      padding: 5px 0;
    }

    /* ðŸ‘‡ LE DESIGN PREMIUM MOBILE EST ICI */
    a.special-link {
      width: 80%; /* Pas trop large, classe */
      margin: 20px auto 10px; /* CentrÃ© avec de l'espace */
      background-color: var(--vert-profond); /* Fond sombre luxueux */
      border: 1px solid var(--or-vodun); /* Bordure Or */
      color: var(--or-vodun) !important; /* Texte Or */
      justify-content: center;
      padding: 15px 0; /* Plus haut pour le doigt */
      box-shadow: 0 5px 15px rgba(26, 46, 46, 0.2);
    }

    a.special-link .oracle-text {
      font-family: "Playfair Display", serif; /* Police Royal */
      font-size: 1rem;
      letter-spacing: 2px;
    }

    /* Le point devient Or sur mobile pour matcher */
    a.special-link .dot {
      background-color: var(--or-vodun);
      box-shadow: 0 0 5px var(--or-vodun);
      animation: none; /* Pas de pulse pour rester sobre/chic */
    }
  }
</style>
