/* src/components/Navigation.astro */
---

<nav id="nav-menu" class="nav-links">
  <a href="/" class="nav-item">Accueil</a>
  <a href="/about" class="nav-item">À Propos</a>
  <a href="/lexique" class="nav-item">Lexique</a>
  <a href="/blog" class="nav-item">Blog</a>
  <a href="/contact" class="nav-item">Contact</a>
</nav>

<style>
  .nav-links {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  /* --- STYLE DES LIENS AVEC ANIMATION DORÉE --- */
  .nav-item {
    text-decoration: none;
    color: #2f4f4f;
    font-weight: 600;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    position: relative;
    padding-bottom: 5px;
    transition: color 0.3s ease;
  }

  /* La ligne dorée qui apparait en dessous */
  .nav-item::after {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #c06c3b;
    transition: width 0.3s ease;
  }

  .nav-item:hover {
    color: #c06c3b;
  }

  .nav-item:hover::after {
    width: 100%;
  }

  /* --- MOBILE --- */
  @media (max-width: 768px) {
    .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      background: white;
      padding: 2rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      border-top: 1px solid #f0f0f0;
      align-items: center;
      gap: 1.5rem;
    }

    /* Quand le menu est ouvert (géré par le script global) */
    :global(.nav-links.active) {
      display: flex;
    }
  }
</style>
