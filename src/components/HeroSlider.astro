---
/* src/components/HeroSlider.astro */
const slides = [
  { img: "/vodun-intro.jpeg", alt: "Tradition" },
  { img: "/divinites-vodun.jpeg", alt: "Divinités" },
  { img: "/fa.jpeg", alt: "Fâ" },
  { img: "/vodunsi.jpeg", alt: "Vodunsi" },
  { img: "/esprit.jpeg", alt: "Esprit" },
];
---

<div class="hero-slider-background">
  {
    slides.map((slide, index) => (
      <div class={`slide ${index === 0 ? "active" : ""}`}>
        <img src={slide.img} alt={slide.alt} />
        <div class="overlay-gradient" />
      </div>
    ))
  }
</div>

<script>
  // On utilise 'astro:page-load' pour que ça marche à chaque navigation (Aller/Retour)
  document.addEventListener("astro:page-load", () => {
    const slides = document.querySelectorAll(".hero-slider-background .slide");
    if (slides.length <= 1) return; // Pas d'animation si 1 seule image

    let current = 0;
    const total = slides.length;

    // Fonction pour changer d'image
    const nextSlide = () => {
      slides[current].classList.remove("active");
      current = (current + 1) % total;
      slides[current].classList.add("active");
    };

    // On lance le chrono
    const interval = setInterval(nextSlide, 6000);

    // IMPORTANT : On nettoie le chrono si l'utilisateur quitte la page
    // pour éviter d'avoir deux chronos qui tournent en même temps
    document.addEventListener(
      "astro:before-swap",
      () => {
        clearInterval(interval);
      },
      { once: true }
    );
  });
</script>

<style>
  .hero-slider-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    background: #000;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 2.5s ease-in-out;
  }

  .slide.active {
    opacity: 1;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.05);
    transition: transform 8s ease-out;
  }

  .slide.active img {
    transform: scale(1);
  }

  .overlay-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at center,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0.8) 100%
    );
  }
</style>
