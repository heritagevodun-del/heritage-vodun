<style>
  /* --- 1. HERO SECTION --- */
  .hero-section {
    position: relative;
    /* Utilisation de dvh pour g√©rer la barre d'adresse mobile */
    height: 100dvh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    color: white;
  }

  /* --- 2. D√âCORATION (ANNEAUX) --- */
  .sanctuaire-container {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    pointer-events: none;
  }

  .anneau-sacre {
    position: absolute;
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.15);
  }

  /* Desktop : taille bas√©e sur la hauteur */
  .externe {
    width: 65vh;
    height: 65vh;
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-left: 1px solid rgba(212, 175, 55, 0.8);
    animation: rot-clock 60s infinite linear;
  }

  .interne {
    width: 45vh;
    height: 45vh;
    border: 1px dashed rgba(255, 255, 255, 0.2);
    animation: rot-anti 45s infinite linear;
  }

  .coeur-lumineux {
    width: 35vh;
    height: 35vh;
    background: radial-gradient(
      circle,
      rgba(212, 175, 55, 0.12) 0%,
      transparent 70%
    );
    animation: pulse 6s infinite ease-in-out;
  }

  /* --- 3. CONTENU --- */
  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    padding: 0 20px;
    /* S√©curit√© mobile : emp√™che le texte de toucher les bords */
    width: 100%;
  }

  .badge-gold {
    display: inline-block;
    border: 1px solid #d4af37;
    color: #d4af37;
    padding: 8px 16px;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 25px;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(5px);
  }

  h1 {
    font-family: "Playfair Display", serif;
    font-size: 5rem;
    line-height: 1.05;
    font-weight: 400;
    margin-bottom: 20px;
    text-shadow: 0 10px 30px rgba(0, 0, 0, 0.6);
  }

  .text-gradient {
    font-weight: 700;
    background: linear-gradient(to right, #ffffff 10%, #d4af37 90%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-style: italic;
  }

  .separator {
    width: 80px;
    height: 3px;
    background: #d4af37;
    margin: 0 auto 30px;
  }

  .description {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 40px;
    line-height: 1.6;
    font-weight: 300;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8); /* Ombre renforc√©e pour lisibilit√© */
  }

  .btn-prestige {
    position: relative;
    display: inline-block;
    padding: 18px 45px;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.9rem;
    border: 1px solid rgba(255, 255, 255, 0.4);
    overflow: hidden;
    transition: all 0.4s ease;
    background: rgba(212, 175, 55, 0.15);
    backdrop-filter: blur(5px);
  }
  .btn-prestige::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: #d4af37;
    transition: width 0.4s ease;
    z-index: -1;
  }
  .btn-prestige:hover {
    border-color: #d4af37;
    color: #000;
  }
  .btn-prestige:hover::before {
    width: 100%;
  }

  /* --- 4. MANIFESTE --- */
  .intro-manifeste {
    position: relative;
    padding: 140px 20px;
    background-color: #fcfbf9;
    text-align: center;
    overflow: hidden;
  }
  .watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 20vw;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.03);
    font-family: "Playfair Display", serif;
    pointer-events: none;
    z-index: 0;
  }
  .container-manifeste {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
  }
  .sur-titre {
    color: #d4af37;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 4px;
    display: block;
    margin-bottom: 15px;
    font-weight: 700;
  }
  .intro-manifeste h2 {
    font-family: "Playfair Display", serif;
    font-size: 3.8rem;
    color: #1a1a1a;
    margin-bottom: 40px;
    line-height: 1.2;
  }
  .italic-highlight {
    color: #2f4f4f;
    font-style: italic;
  }
  .vertical-line {
    width: 1px;
    height: 80px;
    background: linear-gradient(to bottom, #d4af37, transparent);
    margin: 0 auto 40px;
  }
  .texte-pro {
    font-size: 1.25rem;
    line-height: 1.9;
    color: #555;
    text-align: justify;
    text-align-last: center;
  }
  .lettrine {
    float: left;
    font-family: "Playfair Display", serif;
    font-size: 4rem;
    line-height: 0.8;
    color: #d4af37;
    margin-right: 15px;
    margin-top: 5px;
  }

  /* --- ANIMATIONS --- */
  .anim-entry {
    opacity: 0;
    animation: fadeInUp 1s ease-out forwards;
  }
  .delay-1 {
    animation-delay: 0.2s;
  }
  .delay-2 {
    animation-delay: 0.5s;
  }
  .delay-3 {
    animation-delay: 0.8s;
  }
  .delay-4 {
    animation-delay: 1.1s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes rot-clock {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  @keyframes rot-anti {
    from {
      transform: rotate(360deg);
    }
    to {
      transform: rotate(0deg);
    }
  }
  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.7;
    }
  }

  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    width: 1px;
    height: 50px;
    background: rgba(255, 255, 255, 0.2);
  }
  .scroll-indicator span {
    display: block;
    width: 100%;
    height: 50%;
    background: #d4af37;
    animation: scrollDrop 2s infinite;
  }
  @keyframes scrollDrop {
    0% {
      transform: translateY(-100%);
    }
    100% {
      transform: translateY(200%);
    }
  }

  /* =========================================
     üéØ RESPONSIVE MOBILE OPTIMIS√â
     ========================================= */
  @media (max-width: 768px) {
    /* Ajustement des titres */
    h1 {
      font-size: 3rem;
      margin-bottom: 15px;
    }
    .description {
      font-size: 1.1rem;
      padding: 0 10px;
    }

    /* Adaptation des anneaux en largeur d'√©cran (vw) et non en hauteur
       pour √©viter qu'ils ne soient trop grands sur un mobile vertical */
    .externe {
      width: 85vw;
      height: 85vw;
      max-width: 400px;
      max-height: 400px;
    }
    .interne {
      width: 60vw;
      height: 60vw;
      max-width: 280px;
      max-height: 280px;
    }
    .coeur-lumineux {
      width: 40vw;
      height: 40vw;
    }

    /* Ajustement de la section Manifeste */
    .intro-manifeste {
      padding: 80px 20px;
    }
    .intro-manifeste h2 {
      font-size: 2.2rem;
    }

    /* Le texte passe en alignement gauche pour faciliter la lecture sur petit √©cran */
    .texte-pro {
      text-align: left;
      text-align-last: left;
      font-size: 1.1rem;
    }

    /* Ajustement bouton */
    .btn-prestige {
      padding: 15px 30px;
      font-size: 0.8rem;
      width: 100%;
      max-width: 300px;
      text-align: center;
    }
  }
</style>
