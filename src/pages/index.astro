---
import BaseLayout from "../layouts/BaseLayout.astro";
import Newsletter from "../components/Newsletter.astro";
---

<BaseLayout titrePage="Accueil">
  <header class="hero">
    <div class="hero-bg"></div>

    <div class="sanctuaire-container">
      <div class="anneau-sacre externe"></div>
      <div class="anneau-sacre interne"></div>
      <div class="coeur-lumineux"></div>
    </div>

    <div class="contenu-hero">
      <span class="appel-ancetres">Bienvenue sur la terre des origines</span>
      <h1>Lumière du Vodun</h1>
      <p class="slogan">L'âme et l'histoire du Bénin</p>

      <p class="description">
        Une spiritualité vivante. Une philosophie de paix. <br />
        Un lien sacré entre l'Homme et la Nature.
      </p>

      <div class="actions">
        <a href="/about" class="btn-or">Découvrir notre mission</a>
      </div>
    </div>

    <div class="scroll-indicator">
      <span></span>
    </div>
  </header>

  <section class="intro">
    <div class="watermark">VODUN</div>

    <div class="conteneur-texte">
      <span class="sur-titre">Notre Identité</span>
      <h2>
        Une culture,<br />
        <span class="text-highlight">pas un mythe.</span>
      </h2>

      <div class="separateur-vertical"></div>

      <p class="texte-manifeste">
        <span class="lettrine">L</span>e Vodun est une célébration de la vie. À
        travers ce site, nous révélons l'identité béninoise : de la sagesse du
        Fâ à la puissance des rythmes sacrés.
      </p>
    </div>
  </section>

  <Newsletter />
</BaseLayout>

<style>
  /* =========================================
     1. STYLE DU HERO (SANCTUAIRE)
     ========================================= */
  .hero {
    height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    color: white;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/vodunsi.jpeg");
    background-size: cover;
    background-position: center;
    z-index: 1;
    filter: brightness(0.5) contrast(1.2);
  }

  .sanctuaire-container {
    position: absolute;
    width: 800px;
    height: 800px;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2;
    pointer-events: none;
    opacity: 0.8;
  }

  .anneau-sacre {
    position: absolute;
    border-radius: 50%;
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.1);
  }

  .externe {
    width: 650px;
    height: 650px;
    border: 1px solid rgba(212, 175, 55, 0.4);
    border-top: 1px solid rgba(212, 175, 55, 0.9);
    border-bottom: 1px solid rgba(212, 175, 55, 0.9);
    animation: rotation-horaire 60s infinite linear;
  }

  .interne {
    width: 450px;
    height: 450px;
    border: 2px dashed rgba(255, 255, 255, 0.25);
    animation: rotation-anti-horaire 45s infinite linear;
  }

  .coeur-lumineux {
    width: 300px;
    height: 300px;
    background: radial-gradient(
      circle,
      rgba(212, 175, 55, 0.15) 0%,
      transparent 70%
    );
    border-radius: 50%;
    animation: pulsation 6s infinite ease-in-out;
  }

  .contenu-hero {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 700px;
    padding: 0 20px;
    animation: flottement 8s infinite ease-in-out;
  }

  .appel-ancetres {
    display: block;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.85rem;
    color: #d4af37;
    margin-bottom: 10px;
    font-weight: bold;
  }

  h1 {
    font-family: "Playfair Display", serif;
    font-size: 4rem;
    margin: 0;
    line-height: 1.1;
    text-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
  }

  .slogan {
    font-family: "Playfair Display", serif;
    font-style: italic;
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
    margin-top: 10px;
    margin-bottom: 30px;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 40px;
    color: rgba(255, 255, 255, 0.8);
  }

  .btn-or {
    background-color: #d4af37;
    color: #1a1a1a;
    padding: 15px 40px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition:
      transform 0.3s,
      background 0.3s,
      color 0.3s;
    display: inline-block;
    border: 2px solid #d4af37;
  }

  .btn-or:hover {
    background-color: transparent;
    color: #fff;
    border-color: #fff;
    transform: scale(1.05);
  }

  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 50px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    z-index: 10;
  }
  .scroll-indicator span {
    display: block;
    width: 6px;
    height: 6px;
    background: white;
    border-radius: 50%;
    margin: 10px auto 0;
    animation: scroll-anim 2s infinite;
  }

  /* =========================================
     2. STYLE DU MANIFESTE (INTRO) - Nouveau
     ========================================= */
  .intro {
    position: relative;
    padding: 140px 20px; /* Espace généreux */
    background-color: #fdfbf7; /* Blanc cassé */
    overflow: hidden;
    text-align: center;
  }

  /* Le mot géant en fond */
  .watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 18vw; /* Taille énorme */
    font-weight: 900;
    font-family: "Playfair Display", serif;
    color: rgba(0, 0, 0, 0.03); /* Très pâle */
    pointer-events: none;
    z-index: 0;
    white-space: nowrap;
    letter-spacing: 20px;
  }

  .conteneur-texte {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
  }

  .sur-titre {
    display: block;
    color: #d4af37;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 4px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .intro h2 {
    font-family: "Playfair Display", serif;
    font-size: 4rem; /* Grand titre imposant */
    line-height: 1.1;
    color: #1a1a1a;
    margin-bottom: 30px;
  }

  .text-highlight {
    color: #2f4f4f; /* Vert sombre */
    font-style: italic;
  }

  .separateur-vertical {
    width: 2px;
    height: 60px;
    background: linear-gradient(to bottom, #d4af37, transparent);
    margin: 0 auto 30px;
  }

  .texte-manifeste {
    font-family: "Lato", sans-serif;
    font-size: 1.3rem; /* Texte lisible */
    line-height: 1.8;
    color: #4a4a4a;
    text-align: justify; /* Justifié pour effet livre */
    text-align-last: center; /* Dernière ligne centrée */
  }

  /* La Lettrine (Drop Cap) */
  .lettrine {
    float: left;
    font-family: "Playfair Display", serif;
    font-size: 4.5rem;
    line-height: 0.8;
    color: #d4af37;
    margin-right: 15px;
    margin-top: -5px;
    font-weight: bold;
  }

  /* =========================================
     ANIMATIONS & RESPONSIVE
     ========================================= */
  @keyframes rotation-horaire {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  @keyframes rotation-anti-horaire {
    from {
      transform: rotate(360deg);
    }
    to {
      transform: rotate(0deg);
    }
  }
  @keyframes pulsation {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.8;
    }
  }
  @keyframes flottement {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  @keyframes scroll-anim {
    0% {
      transform: translateY(0);
      opacity: 1;
    }
    100% {
      transform: translateY(20px);
      opacity: 0;
    }
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.8rem;
    }
    .intro h2 {
      font-size: 2.5rem;
    }
    .watermark {
      font-size: 30vw;
      opacity: 0.04;
    }
    .sanctuaire-container {
      width: 100%;
    }
    .externe {
      width: 350px;
      height: 350px;
    }
    .interne {
      width: 250px;
      height: 250px;
    }
    .intro {
      padding: 80px 20px;
    }
    .texte-manifeste {
      font-size: 1.1rem;
      text-align: left;
      text-align-last: left;
    }
  }
</style>
