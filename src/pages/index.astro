---
// src/pages/index.astro
import Layout from "../layouts/BaseLayout.astro";
import Newsletter from "../components/Newsletter.astro";
import HeroSlider from "../components/HeroSlider.astro";

// Titre optimisé pour le SEO (Mots-clés géolocalisés + Thématiques)
const pageTitle =
  "Héritage Vodun | Spiritualité, Fâ & Tourisme Culturel à Ouidah (Bénin)";
---

<Layout titrePage={pageTitle}>
  <header class="hero-section">
    <HeroSlider />

    <div class="sanctuaire-container">
      <div class="anneau-sacre externe"></div>
      <div class="anneau-sacre interne"></div>
      <div class="coeur-lumineux"></div>
    </div>

    <div class="hero-content">
      <div class="anim-entry delay-1">
        <span class="badge-gold">Terre des Origines</span>
      </div>

      <h1 class="anim-entry delay-2">
        Héritage <br />
        <span class="text-gradient">Vodun</span>
      </h1>

      <div class="separator anim-entry delay-3"></div>

      <p class="description anim-entry delay-3">
        <strong
          >Le guide ultime de la spiritualité Vodun à Ouidah (Bénin).</strong
        ><br />
        Une immersion authentique loin du folklore.<br />
        Découvrez l'histoire de la Route des Esclaves, consultez le Fâ et dialoguez
        avec nos gardiens.
      </p>

      <div class="actions anim-entry delay-4">
        <a
          href="https://www.mindoguesito.com"
          class="btn-action btn-gold-pulse"
          target="_blank"
          rel="noopener noreferrer"
          title="Discuter avec Mindoguesito, l'Intelligence Artificielle du savoir Vodun"
          aria-label="Ouvrir le chat avec le Gardien des Savoirs dans un nouvel onglet"
        >
          <span class="icon-btn">✨</span> Parler au Gardien
        </a>

        <a href="/about" class="btn-action btn-outline-prestige">
          Découvrir la Mission
        </a>
      </div>
    </div>

    <div class="scroll-indicator">
      <span></span>
    </div>
  </header>

  <section class="intro-manifeste">
    <div class="watermark">HÉRITAGE</div>

    <div class="container-manifeste">
      <span class="sur-titre">Notre Identité</span>

      <h2>
        Une culture à Ouidah,<br />
        <span class="italic-highlight">pas un mythe.</span>
      </h2>

      <div class="vertical-line"></div>

      <p class="texte-pro">
        <span class="lettrine">L</span>e Vodun est bien plus qu'une religion,
        c'est une célébration de la vie et des éléments. À travers ce sanctuaire
        numérique, nous brisons les chaînes des préjugés pour révéler l'identité
        béninoise : de la sagesse mathématique du <strong>Fâ</strong> aux rites des
        divinités. Nous organisons vos <strong
          >visites authentiques sur la Route des Esclaves</strong
        >.
      </p>
    </div>
  </section>

  <Newsletter />
</Layout>

<style>
  /* --- 1. HERO SECTION --- */
  .hero-section {
    position: relative;
    height: 100dvh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    color: white;
    transform: translateZ(0);
  }

  /* --- 2. DÉCORATION (ANNEAUX) --- */
  .sanctuaire-container {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    pointer-events: none;
  }

  .anneau-sacre {
    position: absolute;
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.15);
    will-change: transform; /* Performance Boost */
  }

  .externe {
    width: 65vh;
    height: 65vh;
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-left: 1px solid rgba(212, 175, 55, 0.8);
    animation: rot-clock 60s infinite linear;
  }

  .interne {
    width: 45vh;
    height: 45vh;
    border: 1px dashed rgba(255, 255, 255, 0.2);
    animation: rot-anti 45s infinite linear;
  }

  .coeur-lumineux {
    width: 35vh;
    height: 35vh;
    background: radial-gradient(
      circle,
      rgba(212, 175, 55, 0.12) 0%,
      transparent 70%
    );
    animation: pulse 6s infinite ease-in-out;
    will-change: transform, opacity;
  }

  /* --- 3. CONTENU --- */
  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    padding: 0 20px;
    width: 100%;
  }

  .badge-gold {
    display: inline-block;
    border: 1px solid #d4af37;
    color: #d4af37;
    padding: 8px 16px;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 25px;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(5px);
  }

  h1 {
    font-family: "Playfair Display", serif;
    font-size: 5rem;
    line-height: 1.05;
    font-weight: 400;
    margin-bottom: 20px;
    text-shadow: 0 10px 30px rgba(0, 0, 0, 0.6);
  }

  .text-gradient {
    font-weight: 700;
    background: linear-gradient(to right, #ffffff 10%, #d4af37 90%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-style: italic;
  }

  .separator {
    width: 80px;
    height: 3px;
    background: #d4af37;
    margin: 0 auto 30px;
  }

  .description {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 40px;
    line-height: 1.6;
    font-weight: 300;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }

  /* --- 4. STYLE DES BOUTONS PRO --- */
  .actions {
    display: flex;
    justify-content: center;
    gap: 25px;
    flex-wrap: wrap;
    margin-top: 15px;
  }

  .btn-action {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 18px 38px;
    font-size: 1rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 700;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border-radius: 2px;
  }

  /* BOUTON 1 : OR (IA) */
  .btn-gold-pulse {
    /* Dégradé riche pour effet métallique */
    background: linear-gradient(135deg, #d4af37 0%, #f0c548 100%);
    color: #1a1a1a;
    border: none;
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.4);
    animation: pulse-glow 2.5s infinite; /* Animation continue */
    will-change: transform, box-shadow; /* OPTIMISATION PERFORMANCE MOBILE */
  }

  .btn-gold-pulse:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 10px 30px rgba(212, 175, 55, 0.7);
    background: linear-gradient(135deg, #f0c548 0%, #ffdf80 100%);
  }

  /* BOUTON 2 : CONTOUR (MISSION) */
  .btn-outline-prestige {
    background: transparent;
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.5);
  }

  .btn-outline-prestige:hover {
    background: #fcfcfc;
    color: #1a1a1a;
    border-color: #fcfcfc;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  .icon-btn {
    margin-right: 10px;
    font-size: 1.2rem;
  }

  /* Animation de pulsation du bouton IA */
  @keyframes pulse-glow {
    0% {
      box-shadow: 0 0 0 0 rgba(212, 175, 55, 0.6);
    }
    70% {
      box-shadow: 0 0 0 15px rgba(212, 175, 55, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(212, 175, 55, 0);
    }
  }

  /* --- 5. MANIFESTE --- */
  .intro-manifeste {
    position: relative;
    padding: 140px 20px;
    background-color: #fcfbf9;
    text-align: center;
    overflow: hidden;
  }
  .watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 20vw;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.03);
    font-family: "Playfair Display", serif;
    pointer-events: none;
    z-index: 0;
  }
  .container-manifeste {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
  }
  .sur-titre {
    color: #d4af37;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 4px;
    display: block;
    margin-bottom: 15px;
    font-weight: 700;
  }
  .intro-manifeste h2 {
    font-family: "Playfair Display", serif;
    font-size: 3.8rem;
    color: #1a1a1a;
    margin-bottom: 40px;
    line-height: 1.2;
  }
  .italic-highlight {
    color: #2f4f4f;
    font-style: italic;
  }
  .vertical-line {
    width: 1px;
    height: 80px;
    background: linear-gradient(to bottom, #d4af37, transparent);
    margin: 0 auto 40px;
  }
  .texte-pro {
    font-size: 1.25rem;
    line-height: 1.9;
    color: #555;
    text-align: justify;
    text-align-last: center;
  }
  .lettrine {
    float: left;
    font-family: "Playfair Display", serif;
    font-size: 4rem;
    line-height: 0.8;
    color: #d4af37;
    margin-right: 15px;
    margin-top: 5px;
  }

  /* --- ANIMATIONS --- */
  .anim-entry {
    opacity: 0;
    animation: fadeInUp 1s ease-out forwards;
    will-change: transform, opacity;
  }
  .delay-1 {
    animation-delay: 0.2s;
  }
  .delay-2 {
    animation-delay: 0.5s;
  }
  .delay-3 {
    animation-delay: 0.8s;
  }
  .delay-4 {
    animation-delay: 1.1s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes rot-clock {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  @keyframes rot-anti {
    from {
      transform: rotate(360deg);
    }
    to {
      transform: rotate(0deg);
    }
  }
  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.7;
    }
  }

  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    width: 1px;
    height: 50px;
    background: rgba(255, 255, 255, 0.2);
  }
  .scroll-indicator span {
    display: block;
    width: 100%;
    height: 50%;
    background: #d4af37;
    animation: scrollDrop 2s infinite;
  }
  @keyframes scrollDrop {
    0% {
      transform: translateY(-100%);
    }
    100% {
      transform: translateY(200%);
    }
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    h1 {
      font-size: 3rem;
      margin-bottom: 15px;
    }
    .description {
      font-size: 1.1rem;
      padding: 0 10px;
    }

    /* Layout Mobile des Boutons */
    .actions {
      flex-direction: column;
      gap: 15px;
      width: 100%;
      align-items: center;
      padding: 0 20px;
    }
    .btn-action {
      width: 100%;
      max-width: 320px;
      text-align: center;
      padding: 16px 20px;
    }

    .externe {
      width: 85vw;
      height: 85vw;
      max-width: 400px;
      max-height: 400px;
    }
    .interne {
      width: 60vw;
      height: 60vw;
      max-width: 280px;
      max-height: 280px;
    }
    .coeur-lumineux {
      width: 40vw;
      height: 40vw;
    }

    .intro-manifeste {
      padding: 80px 20px;
    }
    .intro-manifeste h2 {
      font-size: 2.2rem;
    }
    .texte-pro {
      text-align: left;
      text-align-last: left;
      font-size: 1.1rem;
    }
  }
</style>
