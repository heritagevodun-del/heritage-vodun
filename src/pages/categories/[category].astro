---
import BaseLayout from "../../layouts/BaseLayout.astro";
import FaAnimation from "../../components/FaAnimation.astro";

// 1. GÉNÉRATION DES ROUTES (Spécial Catégories)
export async function getStaticPaths() {
  const matches = import.meta.glob("../posts/*.md", { eager: true });
  const allPosts = Object.values(matches);

  // On récupère toutes les catégories uniques
  const uniqueCategories = [
    ...new Set(
      allPosts.map((post: any) => post.frontmatter.categorie).filter(Boolean)
    ),
  ];

  // On crée une page pour chaque catégorie
  return uniqueCategories.map((category) => {
    const filteredPosts = allPosts.filter(
      (post: any) => post.frontmatter.categorie === category
    );

    // Tri par date (plus récent en premier)
    filteredPosts.sort((a: any, b: any) => {
      return (
        new Date(b.frontmatter.pubDate).valueOf() -
        new Date(a.frontmatter.pubDate).valueOf()
      );
    });

    return {
      params: { category },
      props: { posts: filteredPosts },
    };
  });
}

const { category } = Astro.params;
const { posts } = Astro.props;

// Fonction format date (CORRIGÉE avec le type)
function formatDate(dateInput: string | number | Date) {
  if (!dateInput) return "";
  const date = new Date(dateInput);
  return date.toLocaleDateString("fr-FR", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<BaseLayout titrePage={`Catégorie : ${category} | Héritage Vodun`}>
  <div class="page-container">
    <header class="cat-header animate-enter">
      <span class="sous-titre">Collection Thématique</span>
      <h1>{category}</h1>
      <div class="separateur"></div>
      <p>
        Retrouvez les {posts.length} article{posts.length > 1 ? "s" : ""} de la rubrique
        <strong>{category}</strong>
      </p>
    </header>

    <section class="blog-grid">
      {
        posts.map((post: any, index: number) => (
          <article
            class="carte-article"
            style={`animation-delay: ${Math.min(index * 100, 1000)}ms`}
          >
            <a href={post.url} class="lien-global">
              <div class="conteneur-image">
                {post.frontmatter.type_image === "animation_fa" ? (
                  <FaAnimation mode="vignette" />
                ) : (
                  <div
                    class="image-cover"
                    style={`background-image: url(${post.frontmatter.image});`}
                  />
                )}
              </div>
              <div class="contenu-carte">
                <div class="meta-header">
                  <span class="date-publication">
                    {formatDate(post.frontmatter.pubDate)}
                  </span>
                </div>
                <h3>{post.frontmatter.title}</h3>
                <p class="description">{post.frontmatter.description}</p>
                <span class="lire-plus">
                  Lire l'article <span class="fleche">&rarr;</span>
                </span>
              </div>
            </a>
          </article>
        ))
      }
    </section>
  </div>
</BaseLayout>

<style>
  /* --- REPRISE EXACTE DE VOTRE DESIGN --- */
  :root {
    --or-vodun: #d4af37;
    --terre: #a0522d;
    --gris-sombre: #2f4f4f;
    --fond-page: #fdfbf7;
  }
  .page-container {
    background-color: var(--fond-page);
    min-height: 100vh;
    padding-bottom: 80px;
  }

  .cat-header {
    text-align: center;
    padding: 80px 20px 60px;
    max-width: 800px;
    margin: 0 auto;
  }
  .cat-header h1 {
    font-family: "Playfair Display", serif;
    font-size: 3.5rem;
    color: var(--gris-sombre);
    margin: 10px 0;
    text-transform: capitalize;
  }
  .sous-titre {
    font-family: "Lato", sans-serif;
    color: var(--terre);
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.85rem;
    font-weight: bold;
  }
  .separateur {
    width: 60px;
    height: 3px;
    background-color: var(--or-vodun);
    margin: 20px auto;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 40px;
    padding: 0 5%;
    max-width: 1400px;
    margin: 0 auto;
  }

  .carte-article {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: all 0.4s ease;
    border: 1px solid rgba(0, 0, 0, 0.03);
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
  }
  .carte-article:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  }

  .lien-global {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .conteneur-image {
    width: 100%;
    height: 220px;
    overflow: hidden;
    background-color: var(--gris-sombre);
    position: relative;
  }
  .image-cover {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition: transform 0.6s ease;
  }
  .carte-article:hover .image-cover {
    transform: scale(1.1);
  }

  .contenu-carte {
    padding: 30px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  .meta-header {
    margin-bottom: 15px;
  }
  .date-publication {
    font-family: "Lato", sans-serif;
    font-size: 0.8rem;
    color: #999;
    font-style: italic;
  }

  h3 {
    font-family: "Playfair Display", serif;
    font-size: 1.5rem;
    color: var(--gris-sombre);
    margin: 0 0 15px;
    line-height: 1.3;
    transition: color 0.3s;
  }
  .carte-article:hover h3 {
    color: var(--terre);
  }
  .description {
    font-family: "Lato", sans-serif;
    font-size: 1rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 25px;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .lire-plus {
    font-family: "Lato", sans-serif;
    font-weight: bold;
    color: var(--gris-sombre);
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: gap 0.3s;
    margin-top: auto;
  }
  .fleche {
    font-size: 1.2rem;
    color: var(--or-vodun);
    transition: transform 0.3s;
  }
  .carte-article:hover .lire-plus {
    gap: 15px;
    color: var(--terre);
  }
  .carte-article:hover .fleche {
    transform: translateX(5px);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-enter {
    animation: fadeInUp 1s ease forwards;
  }
</style>
