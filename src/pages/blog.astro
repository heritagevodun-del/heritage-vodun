---
import BaseLayout from "../layouts/BaseLayout.astro";
import FaAnimation from "../components/FaAnimation.astro";

// On récupère les articles
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<BaseLayout titrePage="Le Blog">
  <div class="page-container">
    <header class="blog-header animate-enter">
      <span class="sous-titre">Héritage & Transmission</span>
      <h1>Chroniques du Sacré</h1>
      <div class="separateur"></div>
      <p>
        Plongez au cœur des mythes, décryptez les rites et redécouvrez
        l'histoire du Bénin à travers nos récits.
      </p>
    </header>

    <section class="blog-grid">
      {
        allPosts.map((post, index) => (
          <article
            class="carte-article"
            style={`animation-delay: ${index * 150}ms`}
          >
            {/* ZONE 1 : L'Image (Clique vers l'article) */}
            <a href={post.url} class="lien-image">
              <div class="conteneur-image">
                {post.frontmatter.type_image === "animation_fa" ? (
                  <FaAnimation mode="vignette" />
                ) : (
                  <div
                    class="image-cover"
                    style={`background-image: url(${post.frontmatter.image});`}
                  />
                )}
              </div>
            </a>

            <div class="contenu-carte">
              <div class="meta-info">
                {/* ZONE 2 : La Catégorie (Clique vers le filtre tags) */}
                {/* C'est ICI que la magie opère : on pointe vers /tags/NomDeLaCategorie */}
                <a
                  href={`/tags/${post.frontmatter.categorie}`}
                  class="categorie"
                >
                  {post.frontmatter.categorie}
                </a>
              </div>

              {/* ZONE 3 : Le Texte (Clique vers l'article) */}
              <a href={post.url} class="lien-texte">
                <h3>{post.frontmatter.title}</h3>
                <p class="description">{post.frontmatter.description}</p>

                <span class="lire-plus">
                  Lire l'article <span class="fleche">&rarr;</span>
                </span>
              </a>
            </div>
          </article>
        ))
      }
    </section>
  </div>
</BaseLayout>

<style>
  /* --- COULEURS & VARIABLES --- */
  :root {
    --or-vodun: #d4af37;
    --terre: #a0522d;
    --gris-sombre: #2f4f4f;
    --fond-page: #fdfbf7;
  }

  .page-container {
    background-color: var(--fond-page);
    min-height: 100vh;
    padding-bottom: 80px;
  }

  /* --- HEADER --- */
  .blog-header {
    text-align: center;
    padding: 80px 20px 60px;
    max-width: 800px;
    margin: 0 auto;
  }

  .sous-titre {
    font-family: "Lato", sans-serif;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.8rem;
    color: var(--terre);
    display: block;
    margin-bottom: 10px;
  }

  .blog-header h1 {
    font-family: "Playfair Display", serif;
    font-size: 3.5rem;
    color: var(--gris-sombre);
    margin: 0;
    line-height: 1.2;
  }

  .separateur {
    width: 60px;
    height: 3px;
    background-color: var(--or-vodun);
    margin: 20px auto;
  }

  .blog-header p {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
  }

  /* --- GRILLE --- */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 40px;
    padding: 0 5%;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* --- CARTE ARTICLE --- */
  .carte-article {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: all 0.4s ease;
    border: 1px solid rgba(0, 0, 0, 0.03);
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
    display: flex; /* Important pour aligner image et contenu */
    flex-direction: column;
  }

  .carte-article:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  }

  /* --- LIENS --- */
  /* On retire le soulignement par défaut des liens */
  .lien-image,
  .lien-texte,
  .categorie {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .lien-texte {
    display: flex;
    flex-direction: column;
    flex-grow: 1; /* Pour remplir l'espace */
  }

  /* --- IMAGE & ZOOM --- */
  .conteneur-image {
    width: 100%;
    height: 240px;
    overflow: hidden;
    background-color: var(--gris-sombre);
    position: relative;
  }

  .image-cover {
    height: 100%;
    width: 100%;
    background-size: cover;
    background-position: center;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .carte-article:hover .image-cover {
    transform: scale(1.1);
  }

  .carte-article:hover :global(.fa-container) {
    transform: scale(1.05);
    transition: transform 0.6s ease;
  }

  /* --- CONTENU TEXTE --- */
  .contenu-carte {
    padding: 35px 30px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  /* --- CATEGORIE (Nouveau Style Bouton) --- */
  .categorie {
    font-family: "Lato", sans-serif;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--terre);
    font-weight: bold;
    background: rgba(160, 82, 45, 0.1);
    padding: 5px 10px;
    border-radius: 4px;
    display: inline-block; /* Important pour que le bouton ait une taille */
    margin-bottom: 15px;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative; /* Pour passer au dessus du reste */
    z-index: 10;
  }

  /* Effet au survol du bouton catégorie */
  .categorie:hover {
    background-color: var(--terre);
    color: white;
  }

  h3 {
    font-family: "Playfair Display", serif;
    font-size: 1.6rem;
    color: var(--gris-sombre);
    margin: 0 0 15px 0;
    line-height: 1.3;
    transition: color 0.3s;
  }

  .carte-article:hover h3 {
    color: var(--terre);
  }

  /* Modification pour une meilleure description */
  .description {
    font-family: "Lato", sans-serif;
    font-size: 1.05rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 25px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* --- BOUTON LIRE PLUS --- */
  .lire-plus {
    font-family: "Lato", sans-serif;
    font-weight: bold;
    color: var(--gris-sombre);
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: gap 0.3s;
    margin-top: auto;
  }

  .fleche {
    font-size: 1.2rem;
    color: var(--or-vodun);
    transition: transform 0.3s;
  }

  .carte-article:hover .lire-plus {
    gap: 15px;
    color: var(--terre);
  }

  .carte-article:hover .fleche {
    transform: translateX(5px);
  }

  /* --- ANIMATIONS --- */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-enter {
    animation: fadeInUp 1s ease forwards;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 768px) {
    .blog-header {
      padding: 60px 20px 40px;
    }
    .blog-header h1 {
      font-size: 2.5rem;
    }
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    .conteneur-image {
      height: 200px;
    }
  }
</style>
