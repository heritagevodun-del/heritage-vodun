---
import BaseLayout from "../layouts/BaseLayout.astro";
import FaAnimation from "../components/FaAnimation.astro";

// --- DEFINITION DES TYPES ---
interface Frontmatter {
  title: string;
  pubDate: string;
  date?: string;
  description: string;
  categorie: string;
  tags?: string[]; // Ajout du support des tags
  type_image?: string;
  image?: string;
}

interface MarkdownPost {
  frontmatter: Frontmatter;
  url: string;
}

// --- 1. R√âCUP√âRATION DES DONN√âES ---
const matches = import.meta.glob<MarkdownPost>("./posts/*.md", { eager: true });
const allPosts = Object.values(matches);

// Tri du plus r√©cent au plus ancien
const sortedPosts = allPosts.sort((a, b) => {
  const dateA = new Date(
    a.frontmatter.pubDate || a.frontmatter.date || ""
  ).valueOf();
  const dateB = new Date(
    b.frontmatter.pubDate || b.frontmatter.date || ""
  ).valueOf();
  return (isNaN(dateB) ? 0 : dateB) - (isNaN(dateA) ? 0 : dateA);
});

// --- 2. EXTRACTION POUR LES FILTRES (Nouveau) ---
// R√©cup√©rer toutes les cat√©gories uniques pour le menu du haut
const uniqueCategories = [
  ...new Set(
    sortedPosts.map((post) => post.frontmatter.categorie).filter(Boolean)
  ),
];

// R√©cup√©rer les tags les plus populaires
const allTags = sortedPosts.map((post) => post.frontmatter.tags || []).flat();
const tagCounts = allTags.reduce((acc: any, tag: string) => {
  acc[tag] = (acc[tag] || 0) + 1;
  return acc;
}, {});
// Top 10 des tags
const topTags = Object.keys(tagCounts)
  .sort((a, b) => tagCounts[b] - tagCounts[a])
  .slice(0, 10);

// Fonction de formatage date
function formatDate(dateInput: string | Date | undefined) {
  if (!dateInput) return "Date inconnue";
  const date = new Date(dateInput);
  if (isNaN(date.getTime())) return "Date inconnue";
  const options: Intl.DateTimeFormatOptions = {
    year: "numeric",
    month: "long",
    day: "numeric",
  };
  return date.toLocaleDateString("fr-FR", options);
}

// --- 3. SEO ---
const schemaData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  name: "Chroniques du Sacr√© - H√©ritage Vodun",
  description: "Explorez les mythes, les rites et l'histoire du B√©nin.",
  blogPost: sortedPosts.map((post) => ({
    "@type": "BlogPosting",
    headline: post.frontmatter.title,
    description: post.frontmatter.description,
    datePublished: post.frontmatter.pubDate || post.frontmatter.date,
    author: { "@type": "Organization", name: "H√©ritage Vodun" },
    url: `https://heritagevodun.com${post.url}`,
  })),
};
---

<BaseLayout titrePage="Le Blog | Chroniques du Sacr√©">
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

  <div class="page-container">
    <header class="blog-header animate-enter">
      <span class="sous-titre">H√©ritage & Transmission</span>
      <h1>Chroniques du Sacr√©</h1>
      <div class="separateur"></div>
      <p>
        Plongez au c≈ìur des mythes, d√©cryptez les rites et red√©couvrez
        l'histoire du B√©nin √† travers nos r√©cits.
      </p>
    </header>

    <section
      class="filters-section animate-enter"
      style="animation-delay: 150ms"
    >
      <div class="filter-group">
        <h3>Parcourir par Th√®me :</h3>
        <div class="categories-list">
          {
            uniqueCategories.map((cat) => (
              /* Lien vers le dossier CATEGORIES */
              <a href={`/categories/${cat}`} class="cat-pill">
                {cat}
              </a>
            ))
          }
        </div>
      </div>

      {
        topTags.length > 0 && (
          <div class="filter-group">
            <h3>Mots-cl√©s du moment :</h3>
            <div class="tags-cloud">
              {topTags.map((tag) => (
                /* Lien vers le dossier TAGS */
                <a href={`/tags/${tag}`} class="tag-link">
                  #{tag}
                </a>
              ))}
            </div>
          </div>
        )
      }
    </section>
    <section class="blog-grid">
      {
        sortedPosts.map((post, index) => (
          <article
            class="carte-article"
            style={`animation-delay: ${Math.min((index + 2) * 100, 1000)}ms`}
          >
            <a
              href={post.url}
              class="lien-image"
              aria-label={`Lire l'article : ${post.frontmatter.title}`}
            >
              <div class="conteneur-image">
                {post.frontmatter.type_image === "animation_fa" ? (
                  <FaAnimation mode="vignette" />
                ) : (
                  <div
                    class="image-cover"
                    style={`background-image: url(${post.frontmatter.image});`}
                    role="img"
                    aria-label={post.frontmatter.title}
                  />
                )}
              </div>
            </a>

            <div class="contenu-carte">
              <div class="meta-header">
                {/* üëá CORRECTION IMPORTANTE ICI : Lien vers /categories/ */}
                <a
                  href={`/categories/${post.frontmatter.categorie}`}
                  class="categorie"
                >
                  {post.frontmatter.categorie}
                </a>

                <span class="date-publication">
                  {formatDate(
                    post.frontmatter.pubDate || post.frontmatter.date
                  )}
                </span>
              </div>

              <a href={post.url} class="lien-texte">
                <h3>{post.frontmatter.title}</h3>
                <p class="description">{post.frontmatter.description}</p>

                <span class="lire-plus">
                  Lire l'article <span class="fleche">&rarr;</span>
                </span>
              </a>
            </div>
          </article>
        ))
      }
    </section>
  </div>
</BaseLayout>

<style>
  /* --- COULEURS & VARIABLES --- */
  :root {
    --or-vodun: #d4af37;
    --terre: #a0522d;
    --gris-sombre: #2f4f4f;
    --fond-page: #fdfbf7;
  }

  .page-container {
    background-color: var(--fond-page);
    min-height: 100vh;
    padding-bottom: 80px;
    contain: content;
  }

  /* --- HEADER --- */
  .blog-header {
    text-align: center;
    padding: 80px 20px 40px; /* R√©duit un peu le bas pour laisser place aux filtres */
    max-width: 800px;
    margin: 0 auto;
  }

  .sous-titre {
    font-family: "Lato", sans-serif;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.8rem;
    color: var(--terre);
    display: block;
    margin-bottom: 10px;
  }

  .blog-header h1 {
    font-family: "Playfair Display", serif;
    font-size: 3.5rem;
    color: var(--gris-sombre);
    margin: 0;
    line-height: 1.2;
  }

  .separateur {
    width: 60px;
    height: 3px;
    background-color: var(--or-vodun);
    margin: 20px auto;
  }

  .blog-header p {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
  }

  /* --- NOUVEAU : STYLE DES FILTRES --- */
  .filters-section {
    max-width: 1000px;
    margin: 0 auto 60px;
    text-align: center;
    padding: 0 20px;
  }
  .filter-group {
    margin-bottom: 25px;
  }
  .filter-group h3 {
    font-family: "Lato", sans-serif;
    font-size: 0.85rem;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 15px;
  }

  /* Badges Cat√©gories */
  .categories-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
  }
  .cat-pill {
    background: white;
    border: 1px solid var(--or-vodun);
    color: var(--terre);
    padding: 8px 20px;
    border-radius: 30px;
    text-decoration: none;
    font-family: "Lato", sans-serif;
    font-weight: 700;
    font-size: 0.9rem;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  .cat-pill:hover {
    background: var(--or-vodun);
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(212, 175, 55, 0.25);
  }

  /* Nuage de Tags */
  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
    margin-top: 10px;
  }
  .tag-link {
    color: #777;
    text-decoration: none;
    font-size: 0.9rem;
    font-family: "Lato", sans-serif;
    border-bottom: 1px solid transparent;
    transition: all 0.2s;
  }
  .tag-link:hover {
    color: var(--terre);
    border-bottom-color: var(--terre);
  }

  /* --- GRILLE --- */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 40px;
    padding: 0 5%;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* --- CARTE ARTICLE --- */
  .carte-article {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: all 0.4s ease;
    border: 1px solid rgba(0, 0, 0, 0.03);
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
    display: flex;
    flex-direction: column;
    will-change: transform;
    contain: content;
  }

  .carte-article:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  }

  /* --- LIENS --- */
  .lien-image,
  .lien-texte,
  .categorie {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .lien-texte {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  /* --- IMAGE & ZOOM --- */
  .conteneur-image {
    width: 100%;
    height: 240px;
    overflow: hidden;
    background-color: var(--gris-sombre);
    position: relative;
  }

  .image-cover {
    height: 100%;
    width: 100%;
    background-size: cover;
    background-position: center;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .carte-article:hover .image-cover {
    transform: scale(1.1);
  }

  /* --- CONTENU TEXTE --- */
  .contenu-carte {
    padding: 35px 30px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  /* META HEADER */
  .meta-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
  }

  .categorie {
    font-family: "Lato", sans-serif;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--terre);
    font-weight: bold;
    background: rgba(160, 82, 45, 0.1);
    padding: 4px 8px;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .categorie:hover {
    background-color: var(--terre);
    color: white;
  }

  .date-publication {
    font-family: "Lato", sans-serif;
    font-size: 0.8rem;
    color: #999;
    font-style: italic;
  }

  h3 {
    font-family: "Playfair Display", serif;
    font-size: 1.6rem;
    color: var(--gris-sombre);
    margin: 0 0 15px 0;
    line-height: 1.3;
    transition: color 0.3s;
  }

  .carte-article:hover h3 {
    color: var(--terre);
  }

  .description {
    font-family: "Lato", sans-serif;
    font-size: 1.05rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 25px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* --- BOUTON LIRE PLUS --- */
  .lire-plus {
    font-family: "Lato", sans-serif;
    font-weight: bold;
    color: var(--gris-sombre);
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: gap 0.3s;
    margin-top: auto;
  }

  .fleche {
    font-size: 1.2rem;
    color: var(--or-vodun);
    transition: transform 0.3s;
  }

  .carte-article:hover .lire-plus {
    gap: 15px;
    color: var(--terre);
  }

  .carte-article:hover .fleche {
    transform: translateX(5px);
  }

  /* --- ANIMATIONS --- */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-enter {
    animation: fadeInUp 1s ease forwards;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 768px) {
    .blog-header {
      padding: 60px 20px 20px;
    }
    .blog-header h1 {
      font-size: 2.5rem;
    }
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    .conteneur-image {
      height: 200px;
    }
    .filters-section {
      margin-bottom: 40px;
    }
  }
</style>
