---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout titrePage="Contact">
  <div class="header-contact">
    <h1>Restons en lien</h1>
  </div>

  <div class="conteneur-grid">
    <section class="carte-newsletter">
      <h2>Rejoignez le Cercle</h2>
      <p>
        Inscrivez-vous pour recevoir nos "escales" au cœur du Bénin et votre
        message de bienvenue exclusif.
      </p>

      <form
        class="formulaire"
        action="https://formspree.io/f/meoydrwg"
        method="POST"
      >
        <label for="email-news">Votre Email</label>

        <input
          type="email"
          id="email-news"
          name="email_newsletter"
          placeholder="exemple@gmail.com"
          required
        />

        <input
          type="hidden"
          name="_subject"
          value="Nouvel abonné Newsletter !"
        />

        <button type="submit">S'inscrire à la Newsletter</button>
      </form>

      <p class="note-discrete">Rejoignez la communauté Héritage Vodun.</p>
    </section>

    <section class="carte-contact">
      <h2>Nous écrire</h2>
      <p>Une question sur le projet ou une suggestion ?</p>

      <form
        class="formulaire"
        action="https://formspree.io/f/meoydrwg"
        method="POST"
      >
        <label for="nom">Nom</label>
        <input type="text" id="nom" name="nom" required />

        <label for="email-contact">Email</label>
        <input type="email" id="email-contact" name="email" required />

        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" required></textarea>

        <input
          type="hidden"
          name="_subject"
          value="Nouveau message de Contact"
        />

        <button type="submit" class="btn-secondaire">Envoyer le message</button>
      </form>
    </section>
  </div>
</BaseLayout>

<style>
  .header-contact {
    text-align: center;
    padding: 40px 20px;
  }

  .conteneur-grid {
    display: flex;
    flex-wrap: wrap;
    max-width: 1000px;
    margin: 0 auto 80px auto;
    padding: 0 20px;
    gap: 40px;
  }

  section {
    flex: 1;
    min-width: 300px;
    padding: 40px;
    background: white;
    border-radius: 4px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
  }

  /* Newsletter mise en avant */
  .carte-newsletter {
    border: 2px solid var(--couleur-or);
    background-color: #fffcf0;
  }

  .formulaire {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 25px;
  }

  label {
    font-weight: bold;
    font-size: 0.9rem;
  }

  input,
  textarea {
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: "Lato", sans-serif;
    font-size: 16px;
    background: #fafafa;
  }

  button {
    padding: 15px;
    background-color: var(--couleur-principale);
    color: white;
    border: none;
    font-weight: bold;
    cursor: pointer;
    font-size: 16px;
    transition: background 0.3s;
  }

  button:hover {
    background-color: var(--couleur-or);
    color: black;
  }

  .btn-secondaire {
    background-color: #2f4f4f;
  }
  .note-discrete {
    font-size: 0.8rem;
    color: #888;
    margin-top: 15px;
    font-style: italic;
  }
</style>
