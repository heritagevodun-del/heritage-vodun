---
import BaseLayout from "../layouts/BaseLayout.astro";

// SEO : Schema.org pour la page Contact
const schemaData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  mainEntity: {
    "@type": "Organization",
    name: "Héritage Vodun",
    url: "https://www.heritagevodun.com",
    contactPoint: {
      "@type": "ContactPoint",
      contactType: "customer service",
      areaServed: "BJ",
      availableLanguage: ["French", "English"],
    },
  },
};
---

<BaseLayout titrePage="Contact | L'Arbre à Palabre">
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

  <div class="page-container">
    <div class="header-contact animate-fade-down">
      <h1>Parlons ensemble</h1>
      <div class="ligne-or"></div>
      <p class="intro-text">
        Une question sur la tradition ? Une demande particulière ou simplement
        envie de nous saluer ? L'Arbre à Palabre est ouvert.
      </p>
    </div>

    <div class="conteneur-central animate-fade-up">
      <section class="carte carte-contact">
        <div class="contenu-carte">
          <h2>Formulaire de Contact</h2>
          <p class="sous-titre-form">
            Remplissez ce formulaire, nous vous répondrons directement par
            email.
          </p>

          <form id="form-contact" class="formulaire">
            <input
              type="hidden"
              name="access_key"
              value="90fd8cd4-08c6-427b-9e44-ae19d6c3f487"
            />
            <input
              type="hidden"
              name="subject"
              value="Nouveau Message Contact (Site Web)"
            />
            <input
              type="checkbox"
              name="botcheck"
              class="hidden"
              style="display: none;"
            />

            <div class="groupe-input">
              <label for="nom">Nom</label>
              <input
                type="text"
                id="nom"
                name="name"
                required
                placeholder="Votre nom complet"
              />
            </div>

            <div class="groupe-input">
              <label for="email-contact">Email</label>
              <input
                type="email"
                id="email-contact"
                name="email"
                required
                placeholder="votre@email.com"
              />
            </div>

            <div class="groupe-input">
              <label for="message">Message</label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                placeholder="Comment pouvons-nous vous aider ?"></textarea>
            </div>

            <button type="submit" class="btn-envoi">Envoyer le message</button>

            <div id="resultat-contact" class="message-resultat"></div>
          </form>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  const form = document.getElementById("form-contact");
  const result = document.getElementById("resultat-contact");
  const btn = document.querySelector(".btn-envoi");

  if (form) {
    form.addEventListener("submit", function (e) {
      e.preventDefault();
      const formData = new FormData(form);
      const object = Object.fromEntries(formData);
      const json = JSON.stringify(object);

      // Feedback visuel immédiat
      result.innerHTML = "Envoi en cours...";
      result.style.color = "#d4af37";
      result.style.opacity = "1";
      if (btn) btn.innerHTML = "Patientez...";

      fetch("https://api.web3forms.com/submit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Accept: "application/json",
        },
        body: json,
      })
        .then(async (response) => {
          let json = await response.json();
          if (response.status == 200) {
            // Succès
            result.innerHTML =
              "✨ Merci ! Votre parole a bien été reçue sous l'Arbre à Palabre.<br>Nous vous répondrons avec joie très prochainement.";
            result.style.color = "#2f4f4f";
            form.reset();
            if (btn) btn.innerHTML = "Message Envoyé";
          } else {
            // Erreur API
            console.log(response);
            result.innerHTML = json.message || "Une erreur est survenue.";
            result.style.color = "red";
            if (btn) btn.innerHTML = "Réessayer";
          }
        })
        .catch((error) => {
          // Erreur Réseau
          console.log(error);
          result.innerHTML = "Problème de connexion. Veuillez réessayer.";
          result.style.color = "red";
          if (btn) btn.innerHTML = "Réessayer";
        });
    });
  }
</script>

<style>
  /* --- VARIABLES (Harmonisées avec le reste du site) --- */
  :root {
    --or-vodun: #d4af37;
    --terre: #a0522d;
    --gris-sombre: #2f4f4f;
    --fond-page: #fdfbf7;
  }

  .page-container {
    background-color: var(--fond-page);
    padding-bottom: 80px;
    min-height: 80vh;
    contain: content;
  }

  /* --- HEADER --- */
  .header-contact {
    text-align: center;
    padding: 80px 20px 40px;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-family: "Playfair Display", serif;
    font-size: 3.5rem;
    color: var(--gris-sombre);
    margin-bottom: 20px;
    line-height: 1.1;
  }

  .ligne-or {
    width: 60px;
    height: 3px;
    background-color: var(--or-vodun);
    margin: 0 auto 25px;
  }

  .intro-text {
    font-size: 1.15rem;
    color: #555;
    font-family: "Lato", sans-serif;
    line-height: 1.6;
  }

  /* --- CARTE CENTRALE --- */
  .conteneur-central {
    max-width: 650px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .carte {
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    border-top: 5px solid var(--terre); /* Touche de couleur "Terre" */
    transition: transform 0.3s ease;
  }

  .carte:hover {
    transform: translateY(-5px);
  }

  .contenu-carte {
    padding: 45px;
  }

  h2 {
    font-family: "Playfair Display", serif;
    font-size: 2rem;
    margin-bottom: 15px;
    color: var(--gris-sombre);
    text-align: center;
  }

  .sous-titre-form {
    text-align: center;
    color: #666;
    margin-bottom: 35px;
    font-size: 0.95rem;
  }

  /* --- FORMULAIRE --- */
  .formulaire {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .groupe-input {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  label {
    font-weight: 700;
    color: var(--gris-sombre);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  input,
  textarea {
    width: 100%;
    padding: 16px;
    border: 2px solid #eee;
    border-radius: 8px;
    font-family: "Lato", sans-serif;
    font-size: 16px;
    background: #fafafa;
    box-sizing: border-box; /* Important pour éviter les dépassements */
    transition: all 0.3s ease;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--or-vodun);
    background: white;
    box-shadow: 0 0 0 4px rgba(212, 175, 55, 0.1);
  }

  /* --- BOUTON --- */
  .btn-envoi {
    padding: 18px;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    cursor: pointer;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 15px;
    background: linear-gradient(135deg, var(--terre), #8b4513);
    color: white;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(160, 82, 45, 0.3);
  }

  .btn-envoi:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(160, 82, 45, 0.4);
    background: linear-gradient(135deg, #8b4513, var(--terre));
  }

  .message-resultat {
    text-align: center;
    font-weight: bold;
    margin-top: 10px;
    line-height: 1.6;
    padding: 10px;
    border-radius: 6px;
    opacity: 0; /* Caché par défaut */
    transition: opacity 0.5s ease;
  }

  /* --- ANIMATIONS --- */
  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-down {
    animation: fadeDown 1s ease-out forwards;
  }
  .animate-fade-up {
    opacity: 0;
    animation: fadeUp 1s ease-out 0.3s forwards; /* Petit délai */
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }
    .contenu-carte {
      padding: 30px 20px;
    }
    .header-contact {
      padding: 60px 20px 30px;
    }
  }
</style>
