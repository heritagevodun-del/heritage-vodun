<style>
  /* --- Variables locales de secours (si non d√©finies dans BaseLayout) --- */
  :root {
    --couleur-principale: #a0522d; /* Terre de sienne / Ocre */
    --couleur-secondaire: #2f4f4f; /* Gris ardoise fonc√© */
    --couleur-or: #d4af37; /* Or */
    --bg-page: #fdfbf7; /* Blanc cass√© chaleureux */
  }

  /* --- Structure Globale --- */
  .page-container {
    background-color: var(--bg-page, #fdfbf7);
    padding-bottom: 80px;
  }

  .header-contact {
    text-align: center;
    padding: 60px 20px 40px;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-family: "Playfair Display", serif; /* Police titres */
    font-size: 3rem;
    color: var(--couleur-secondaire, #333);
    margin-bottom: 15px;
  }

  .intro-text {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
  }

  /* --- Grille et Cartes --- */
  .conteneur-grid {
    display: flex;
    flex-wrap: wrap;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
    gap: 40px;
    align-items: flex-start; /* Important pour que les hauteurs s'adaptent */
  }

  .carte {
    flex: 1;
    min-width: 320px; /* Emp√™che d'√™tre trop petit */
    background: white;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08); /* Ombre plus douce */
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease;
  }

  .contenu-carte {
    padding: 40px;
  }

  .carte:hover {
    transform: translateY(-5px); /* Petit effet de lev√©e au survol */
  }

  h2 {
    font-family: "Playfair Display", serif;
    font-size: 1.8rem;
    margin-bottom: 15px;
    color: var(--couleur-secondaire, #222);
    position: relative;
    padding-bottom: 15px;
  }

  /* Petite ligne d√©corative sous les titres h2 */
  h2::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background-color: var(--couleur-or, #d4af37);
  }

  p {
    font-family: "Lato", sans-serif;
    color: #555;
    line-height: 1.6;
    margin-bottom: 25px;
  }

  /* --- Sp√©cificit√©s Newsletter --- */
  .carte-newsletter {
    border-top: 5px solid var(--couleur-or, #d4af37); /* Juste une ligne en haut */
    background: linear-gradient(
      to bottom,
      #fffcf5,
      #ffffff
    ); /* D√©grad√© subtil */
  }

  /* --- Formulaires --- */
  .formulaire {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  label {
    font-weight: bold;
    font-size: 0.9rem;
    color: #333;
    margin-bottom: -10px; /* Rapproche le label de l'input */
    display: block;
  }

  input,
  textarea {
    width: 100%;
    padding: 15px;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    font-family: "Lato", sans-serif;
    font-size: 16px;
    background: #fafafa;
    transition: all 0.3s ease;
    box-sizing: border-box; /* Crucial pour le responsive */
  }

  /* Effet Focus √©l√©gant */
  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--couleur-or, #d4af37);
    background: white;
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }

  /* --- Boutons --- */
  button {
    padding: 16px;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
    font-size: 16px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 10px;
  }

  .btn-primary {
    background-color: var(--couleur-or, #d4af37);
    color: #1a1a1a;
  }

  .btn-primary:hover {
    background-color: #b89628;
    transform: scale(1.02);
  }

  .btn-secondaire {
    background-color: var(--couleur-secondaire, #2f4f4f);
    color: white;
  }

  .btn-secondaire:hover {
    background-color: #1e3333;
    transform: scale(1.02);
  }

  .note-discrete {
    font-size: 0.85rem;
    color: #999;
    margin-top: 20px;
    font-style: italic;
    text-align: center;
  }

  /* --- RESPONSIVE MOBILE --- */
  @media (max-width: 768px) {
    .header-contact {
      padding: 40px 20px 20px;
    }

    h1 {
      font-size: 2.2rem;
    }

    .conteneur-grid {
      flex-direction: column; /* Empile les cartes verticalement */
      gap: 30px;
    }

    .carte {
      min-width: 100%; /* Prend toute la largeur */
    }

    .contenu-carte {
      padding: 25px; /* Moins de marge interne sur mobile */
    }

    h2 {
      font-size: 1.5rem;
    }
  }
</style>
