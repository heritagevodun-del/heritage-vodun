---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout titrePage="Contact">
  <div class="page-container">
    <div class="header-contact">
      <h1>Parlons ensemble</h1>
      <p class="intro-text">
        Une question sur la tradition ? Une demande particulière ou simplement
        envie de nous saluer ? L'Arbre à Palabre est ouvert.
      </p>
    </div>

    <div class="conteneur-central">
      <section class="carte carte-contact">
        <div class="contenu-carte">
          <h2>Formulaire de Contact</h2>
          <p>
            Remplissez ce formulaire, nous vous répondrons directement par
            email.
          </p>

          <form id="form-contact" class="formulaire">
            <input
              type="hidden"
              name="access_key"
              value="90fd8cd4-08c6-427b-9e44-ae19d6c3f487"
            />
            <input
              type="hidden"
              name="subject"
              value="Nouveau Message Contact (Site Web)"
            />
            <input
              type="checkbox"
              name="botcheck"
              class="hidden"
              style="display: none;"
            />

            <label for="nom">Nom</label>
            <input
              type="text"
              id="nom"
              name="name"
              required
              placeholder="Votre nom complet"
            />

            <label for="email-contact">Email</label>
            <input
              type="email"
              id="email-contact"
              name="email"
              required
              placeholder="votre@email.com"
            />

            <label for="message">Message</label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              placeholder="Comment pouvons-nous vous aider ?"></textarea>

            <button type="submit" class="btn-secondaire"
              >Envoyer le message</button
            >
            <p class="message-resultat" id="resultat-contact"></p>
          </form>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  const form = document.getElementById("form-contact");
  const result = document.getElementById("resultat-contact");

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.innerHTML = "Envoi en cours...";
    result.style.color = "#d4af37";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.innerHTML = "✨ Message envoyé avec succès !";
          result.style.color = "#2f4f4f";
          form.reset();
        } else {
          result.innerHTML = "Erreur. Veuillez réessayer.";
          result.style.color = "red";
        }
      })
      .catch((error) => {
        result.innerHTML = "Problème de connexion.";
        result.style.color = "red";
      });
  });
</script>

<style>
  :root {
    --couleur-secondaire: #2f4f4f;
    --couleur-or: #d4af37;
    --bg-page: #fdfbf7;
  }

  .page-container {
    background-color: var(--bg-page);
    padding-bottom: 80px;
    min-height: 80vh; /* Prend de la hauteur */
  }

  .header-contact {
    text-align: center;
    padding: 60px 20px 40px;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-family: "Playfair Display", serif;
    font-size: 3rem;
    color: #333;
    margin-bottom: 15px;
  }

  .intro-text {
    font-size: 1.1rem;
    color: #666;
  }

  /* Conteneur centré pour une seule carte */
  .conteneur-central {
    max-width: 700px; /* Plus étroit pour faire "Pro" */
    margin: 0 auto;
    padding: 0 20px;
  }

  .carte {
    background: white;
    border-radius: 12px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border-top: 4px solid var(--couleur-secondaire);
  }

  .contenu-carte {
    padding: 40px;
  }

  h2 {
    font-family: "Playfair Display", serif;
    font-size: 1.8rem;
    margin-bottom: 25px;
    color: var(--couleur-secondaire);
    text-align: center;
  }

  .formulaire {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  label {
    font-weight: bold;
    margin-bottom: -10px;
    color: #333;
  }

  input,
  textarea {
    width: 100%;
    padding: 15px;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    font-family: "Lato", sans-serif;
    font-size: 16px;
    background: #fafafa;
    box-sizing: border-box;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--couleur-or);
    background: white;
  }

  button {
    padding: 16px;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
    font-size: 16px;
    text-transform: uppercase;
    margin-top: 10px;
    background-color: var(--couleur-secondaire);
    color: white;
    transition: 0.3s;
  }

  button:hover {
    background-color: #1e3333;
  }

  .message-resultat {
    text-align: center;
    font-weight: bold;
    margin-top: 10px;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.2rem;
    }
    .contenu-carte {
      padding: 25px;
    }
  }
</style>
