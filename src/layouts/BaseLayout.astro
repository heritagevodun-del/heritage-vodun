    <div id="oracle-widget">
      <div id="oracle-window" class="hidden">
        <div class="oracle-header">
          <div class="header-left">
            <span class="status-dot"></span>
            <span class="oracle-title">Mindoguesito (En ligne)</span>
          </div>
          <button id="close-oracle">√ó</button>
        </div>

        <div class="oracle-body-chat">
          <iframe
            src="https://www.mindoguesito.com"
            title="Chat avec Mindoguesito"
            frameborder="0"
            allow="microphone;"></iframe>
        </div>
      </div>

      <button id="oracle-trigger" aria-label="Ouvrir l'Oracle">
        <div class="eye-icon">
          <svg
            viewBox="0 0 100 100"
            width="35"
            height="35"
            fill="none"
            stroke="white"
            stroke-width="6"
          >
            <path d="M10 50 Q50 10 90 50 Q50 90 10 50 Z"></path>
            <circle cx="50" cy="50" r="12" fill="white" stroke="none"></circle>
          </svg>
        </div>
        <div class="pulse-ring"></div>
      </button>
    </div>
    <script>
      // Redirection simple si on est sur le sous-domaine
      if (window.location.hostname.includes("vercel.app")) {
        window.location.replace(
          "https://www.heritagevodun.com" + window.location.pathname,
        );
      }

      document.addEventListener("astro:page-load", () => {
        // --- 1. GESTION DU MENU MOBILE ---
        const menuBtn = document.getElementById("menu-toggle");
        const navMenu = document.getElementById("nav-menu");

        if (menuBtn && navMenu && menuBtn.parentNode) {
          const newMenuBtn = menuBtn.cloneNode(true) as HTMLElement;
          menuBtn.parentNode.replaceChild(newMenuBtn, menuBtn);

          newMenuBtn.addEventListener("click", () => {
            navMenu.classList.toggle("active");
            newMenuBtn.classList.toggle("open");
          });
        }

        // --- 2. GESTION DU FORMULAIRE FOOTER ---
        const footerForm = document.getElementById(
          "footer-newsletter-form",
        ) as HTMLFormElement | null;
        const footerResult = document.getElementById("footer-result");
        const footerBtn = footerForm
          ? (footerForm.querySelector(".btn-submit") as HTMLButtonElement)
          : null;

        if (footerForm && footerResult && footerBtn) {
          footerForm.addEventListener("submit", function (e) {
            e.preventDefault();
            const formData = new FormData(footerForm);
            const object = Object.fromEntries(formData);
            const json = JSON.stringify(object);

            footerResult.innerHTML = "...";
            footerResult.style.color = "#c06c3b";
            footerBtn.disabled = true;
            footerBtn.style.opacity = "0.7";

            fetch("https://api.web3forms.com/submit", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
                Accept: "application/json",
              },
              body: json,
            })
              .then(async (response) => {
                if (response.status == 200) {
                  footerResult.innerHTML = "‚ú® Merci ! Inscription valid√©e.";
                  footerResult.style.color = "#4CAF50";
                  footerForm.reset();
                  setTimeout(() => {
                    footerResult.innerHTML = "";
                    footerBtn.disabled = false;
                    footerBtn.style.opacity = "1";
                  }, 3000);
                } else {
                  footerResult.innerHTML = "Une erreur est survenue.";
                  footerResult.style.color = "red";
                  footerBtn.disabled = false;
                  footerBtn.style.opacity = "1";
                }
              })
              .catch((error) => {
                console.error(error);
                footerResult.innerHTML = "Erreur de connexion.";
                footerResult.style.color = "red";
                footerBtn.disabled = false;
                footerBtn.style.opacity = "1";
              });
          });
        }

        // --- 3. GESTION DE L'ORACLE (CHATBOT) ---
        const oracleTrigger = document.getElementById("oracle-trigger");
        const oracleWindow = document.getElementById("oracle-window");
        const closeOracle = document.getElementById("close-oracle");

        function toggleOracle() {
          oracleWindow?.classList.toggle("hidden");
        }

        if (oracleTrigger) {
          oracleTrigger.addEventListener("click", toggleOracle);
        }
        if (closeOracle) {
          closeOracle.addEventListener("click", () => {
            oracleWindow?.classList.add("hidden");
          });
        }

        // --- LA T√âL√âCOMMANDE (Trigger √† distance) ---
        const remoteTriggers = document.querySelectorAll(".open-oracle");
        remoteTriggers.forEach((btn) => {
          btn.addEventListener("click", (e) => {
            e.preventDefault();
            if (oracleWindow) {
              oracleWindow.classList.remove("hidden");
              window.scrollTo({
                top: document.body.scrollHeight,
                behavior: "smooth",
              });
            }
          });
        });
      });
    </script>

    <SpeedInsights />
  </body>
</html>

<style>
  /* --- RESET & GLOBAL --- */
  :global(*),
  :global(*::before),
  :global(*::after) {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
