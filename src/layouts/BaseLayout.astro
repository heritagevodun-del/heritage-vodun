            <circle cx="50" cy="36" r="2.5" fill="#C06C3B"></circle>
            <circle cx="39" cy="25" r="2.5" fill="#C06C3B"></circle>
            <circle cx="61" cy="25" r="2.5" fill="#C06C3B"></circle>
          </svg>
          <span class="logo-text">H√©ritage Vodun</span>
        </a>

        <button id="menu-toggle" aria-label="Ouvrir le menu">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>

