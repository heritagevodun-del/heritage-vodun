---
import "../styles/global.css";

// On récupère les infos de la page. Si on ne donne rien, il utilise les valeurs par défaut.
const {
  titrePage = "Héritage Vodun",
  description = "Découvrez l'essence du Vodun, spiritualité millénaire du Bénin. Histoire, rites et culture expliqués loin des clichés.",
  image = "/vodunsi.jpg", // L'image que vous avez envoyée
} = Astro.props;

// Crée l'URL canonique (l'adresse officielle de la page pour Google)
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{titrePage} | Héritage Vodun</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={titrePage} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={titrePage} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navigation-principale">
      <div class="logo">Héritage Vodun</div>
      <div class="liens">
        <a href="/">Accueil</a>
        <a href="/blog">Blog</a>
        <a href="/about">À Propos</a>
        <a href="/contact">Contact</a>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer>
      <p>
        &copy; {new Date().getFullYear()} Héritage Vodun. Tous droits réservés.
      </p>
    </footer>
  </body>
</html>

<style>
  /* STYLES RAPIDES POUR LE MENU (Si vous ne les avez pas ailleurs) */
  .navigation-principale {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 40px;
    background: white;
    border-bottom: 1px solid #eee;
  }
  .logo {
    font-family: "Playfair Display", serif;
    font-weight: bold;
    font-size: 1.5rem;
    color: #2f4f4f;
  }
  .liens a {
    text-decoration: none;
    color: #333;
    margin-left: 20px;
    font-family: "Lato", sans-serif;
    font-weight: bold;
    transition: color 0.3s;
  }
  .liens a:hover {
    color: #d4af37; /* Or */
  }
  footer {
    text-align: center;
    padding: 40px;
    background: #2f4f4f;
    color: white;
    margin-top: auto;
    font-family: "Lato", sans-serif;
  }
</style>
