<style>
  /* --- RESET & GLOBAL --- */
  :global(*),
  :global(*::before),
  :global(*::after) {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    font-family: "Lato", sans-serif;
    color: #333;
    line-height: 1.6;
    background-color: #fcfcfc;
  }
  main {
    flex: 1;
  }

  /* --- HEADER --- */
  .site-header {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.04);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.8rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo-wrapper {
    display: flex;
    align-items: center;
    text-decoration: none;
    gap: 12px;
  }
  .logo-text {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    font-size: 1.5rem;
    color: #2f4f4f;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  #menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    flex-direction: column;
    gap: 5px;
  }
  .hamburger-line {
    width: 25px;
    height: 3px;
    background-color: #2f4f4f;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  /* --- FOOTER PRO --- */
  .site-footer {
    background-color: #1a2e2e;
    color: #e0e0e0;
    padding-top: 4rem;
    margin-top: 4rem;
    border-top: 4px solid #c06c3b;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-logo {
    font-family: "Playfair Display", serif;
    font-size: 1.8rem;
    color: #fff;
    margin-bottom: 1rem;
  }
  h4 {
    font-family: "Playfair Display", serif;
    color: #c06c3b;
    margin-bottom: 1.2rem;
    font-size: 1.2rem;
  }

  .brand-desc {
    font-size: 0.95rem;
    opacity: 0.8;
    margin-bottom: 1.5rem;
    max-width: 300px;
  }

  .footer-links ul {
    list-style: none;
  }
  .footer-links li {
    margin-bottom: 0.8rem;
  }
  .footer-links a {
    color: #b0b0b0;
    text-decoration: none;
    transition: color 0.2s;
  }
  .footer-links a:hover {
    color: #c06c3b;
    padding-left: 5px;
  }

  .footer-newsletter p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    opacity: 0.8;
  }
  .newsletter-form {
    display: flex;
  }
  .newsletter-form input {
    padding: 10px;
    border: none;
    border-radius: 4px 0 0 4px;
    width: 100%;
    outline: none;
  }
  .newsletter-form button {
    background: #c06c3b;
    color: white;
    border: none;
    padding: 0 15px;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
    font-weight: bold;
    transition: background 0.3s;
  }
  .newsletter-form button:hover {
    background: #a05a2f;
  }

  .footer-contact p {
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
    opacity: 0.9;
  }
  .contact-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
  }
  .contact-link:hover {
    color: #c06c3b;
    text-decoration: underline;
  }

  .contact-btn-footer {
    display: inline-block;
    margin-top: 10px;
    font-size: 0.9rem;
    color: #c06c3b;
    text-decoration: none;
    border-bottom: 1px solid #c06c3b;
    padding-bottom: 2px;
  }

  .footer-bottom {
    background: #142424;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.85rem;
    color: #888;
  }
  .legal-links a {
    color: #888;
    text-decoration: none;
    transition: color 0.2s;
  }
  .legal-links a:hover {
    color: #ccc;
  }
  .separator {
    margin: 0 10px;
    opacity: 0.3;
  }

  @media (max-width: 900px) {
    .footer-container {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 600px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
    #menu-toggle {
      display: flex;
    }
  }
</style>
