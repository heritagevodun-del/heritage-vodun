  }
  .oracle-title {
    font-weight: bold;
    font-size: 0.95rem;
  }

  #close-oracle {
    background: none;
    border: none;
    color: #aaa;
    font-size: 1.5rem;
    cursor: pointer;
    line-height: 1;
  }
  #close-oracle:hover {
