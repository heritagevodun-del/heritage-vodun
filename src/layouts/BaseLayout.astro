    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "TravelAgency",
        "name": "H√©ritage Vodun",
        "url": "https://www.heritagevodun.com",
        "image": "https://www.heritagevodun.com/vodunsi.jpeg",
        "description": "Guide culturel et spirituel √† Ouidah. Sp√©cialiste du Vodun, du F√¢ et de l'histoire du B√©nin.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Ouidah",
          "addressRegion": "Atlantique",
          "addressCountry": "BJ"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 6.3667,
          "longitude": 2.0833
        },
        "telephone": "+2290169783365",
        "priceRange": "$$"
      }
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <header class="site-header">
      <div class="header-container">
        <a href="/" class="logo-wrapper">
          <svg
            class="logo-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 100 100"
            width="45"
            height="45"
          >
            <circle
              cx="50"
              cy="50"
              r="45"
              fill="none"
              stroke="#C06C3B"
              stroke-width="2"
              opacity="0.7"></circle>
