    text-transform: uppercase;
    letter-spacing: 1px;
  }

  #menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    flex-direction: column;
    gap: 5px;
  }
  .hamburger-line {
    width: 25px;
    height: 3px;
    background-color: #2f4f4f;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  /* --- FOOTER PRO --- */
  .site-footer {
    background-color: #1a2e2e;
    color: #e0e0e0;
    padding-top: 4rem;
    margin-top: 4rem;
    border-top: 4px solid #c06c3b;
  }
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }
  .footer-logo {
    font-family: "Playfair Display", serif;
    font-size: 1.8rem;
    color: #fff;
    margin-bottom: 1rem;
  }
  h4 {
    font-family: "Playfair Display", serif;
    color: #c06c3b;
    margin-bottom: 1.2rem;
    font-size: 1.2rem;
  }
  .brand-desc {
    font-size: 0.95rem;
    opacity: 0.8;
    margin-bottom: 1.5rem;
    max-width: 300px;
  }
  .footer-links ul {
    list-style: none;
  }
  .footer-links li {
    margin-bottom: 0.8rem;
  }
  .footer-links a {
    color: #b0b0b0;
    text-decoration: none;
    transition: color 0.2s;
  }
  .footer-links a:hover {
    color: #c06c3b;
    padding-left: 5px;
  }

  .footer-newsletter p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    opacity: 0.8;
  }

  /* --- STYLE FORMULAIRE FOOTER --- */
  .newsletter-form {
    display: flex;
    flex-direction: column;
  }
  .input-wrapper {
    display: flex;
  }
  .newsletter-form input {
    padding: 10px;
    border: none;
    border-radius: 4px 0 0 4px;
    width: 100%;
    outline: none;
    font-family: "Lato", sans-serif;
  }
  .newsletter-form button {
    background: #c06c3b;
    color: white;
    border: none;
    padding: 0 15px;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
