    z-index: 9999;
    font-family: "Lato", sans-serif;
  }

  /* Le Bouton Flottant (Inchang√©) */
  #oracle-trigger {
    background: #c06c3b;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 20px rgba(192, 108, 59, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    transition:
      transform 0.3s ease,
      background 0.3s;
    position: relative;
