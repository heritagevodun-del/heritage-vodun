---
// src/layouts/BaseLayout.astro
import Navigation from "../components/Navigation.astro";
import { ClientRouter } from "astro:transitions";

const {
  titrePage = "H√©ritage Vodun",
  description = "D√©couvrez l'essence du Vodun, spiritualit√© mill√©naire du B√©nin.",
  image = "/vodunsi.jpeg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <ClientRouter />

    <script is:inline>
      if (window.location.hostname.includes("vercel.app")) {
        window.location.replace(
          "https://www.heritagevodun.com" + window.location.pathname
        );
      }
    </script>

    <meta
      name="google-site-verification"
      content="CRqvKv6IhsMc-HKsY_2vq9n2Az8AqbXUZ_IRFfe240I"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{titrePage} | H√©ritage Vodun</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={titrePage} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={titrePage} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <script type="text/javascript" transition:persist>
      function googleTranslateElementInit() {
        new google.translate.TranslateElement(
          {
            pageLanguage: "fr",
            includedLanguages: "en,fr",
            autoDisplay: false,
          },
          "google_translate_element"
        );
      }
    </script>
    <script
      type="text/javascript"
      src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"
      transition:persist></script>

    <style>
      body {
        top: 0 !important;
      }
      .goog-te-banner-frame {
        display: none !important;
      }
      #google_translate_element {
        display: none;
      }
    </style>
  </head>

  <body>
    <div id="google_translate_element" transition:persist></div>

    <header class="site-header">
      <div class="header-container">
        <a href="/" class="logo-wrapper">
          <svg
            class="logo-icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 100 100"
            width="45"
            height="45"
          >
            <circle
              cx="50"
              cy="50"
              r="45"
              fill="none"
              stroke="#C06C3B"
              stroke-width="2"
              opacity="0.7"></circle>
            <path d="M42 85 L58 85 L54 92 L46 92 Z" fill="#C06C3B"></path>
            <rect x="47" y="32" width="6" height="53" fill="#C06C3B"></rect>
            <circle
              cx="50"
              cy="25"
              r="14"
              fill="none"
              stroke="#C06C3B"
              stroke-width="4"></circle>
            <circle cx="50" cy="25" r="4" fill="#C06C3B"></circle>
            <circle cx="50" cy="14" r="2.5" fill="#C06C3B"></circle>
            <circle cx="50" cy="36" r="2.5" fill="#C06C3B"></circle>
            <circle cx="39" cy="25" r="2.5" fill="#C06C3B"></circle>
            <circle cx="61" cy="25" r="2.5" fill="#C06C3B"></circle>
          </svg>
          <span class="logo-text">H√©ritage Vodun</span>
        </a>

        <button id="menu-toggle" aria-label="Ouvrir le menu">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>

        <Navigation />
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="footer-container">
        <div class="footer-brand">
          <h3 class="footer-logo">H√©ritage Vodun</h3>
          <p class="brand-desc">
            Le portail de r√©f√©rence pour comprendre la spiritualit√©, l'histoire
            et les rites du B√©nin.
          </p>
        </div>

        <div class="footer-links">
          <h4>Explorer</h4>
          <ul>
            <li><a href="/">Accueil</a></li>
            <li><a href="/lexique">Lexique</a></li>
            <li><a href="/blog">Articles</a></li>
            <li><a href="/about">Mission</a></li>
          </ul>
        </div>

        <div class="footer-newsletter">
          <h4>Newsletter</h4>
          <p>Recevez nos r√©cits chaque mois.</p>
          <form
            class="newsletter-form"
            onsubmit="event.preventDefault(); alert('Merci !');"
          >
            <input type="email" placeholder="Email..." required />
            <button type="submit">‚Üí</button>
          </form>
        </div>

        <div class="footer-contact">
          <h4>Contact</h4>
          <p>üìç Ouidah, B√©nin</p>
          <p>üìß contact@heritagevodun.com</p>
        </div>
      </div>

      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} H√©ritage Vodun.</p>
      </div>
    </footer>

    <script>
      document.addEventListener("astro:page-load", () => {
        // 1. Menu Mobile
        const menuBtn = document.getElementById("menu-toggle");
        const navMenu = document.getElementById("nav-menu");
        if (menuBtn && navMenu && menuBtn.parentNode) {
          const newMenuBtn = menuBtn.cloneNode(true);
          menuBtn.parentNode.replaceChild(newMenuBtn, menuBtn);
          if (newMenuBtn instanceof HTMLElement) {
            newMenuBtn.addEventListener("click", () => {
              navMenu.classList.toggle("active");
              newMenuBtn.classList.toggle("open");
            });
          }
        }

        // 2. Traduction par Cookie (Typ√© pour TypeScript)
        const translateBtn = document.getElementById("translate-btn");

        // CORRECTION 1 : Ajout des types (name: string) pour satisfaire TypeScript
        function getCookie(name: string) {
          const v = document.cookie.match("(^|;) ?" + name + "=([^;]*)(;|$)");
          return v ? v[2] : null;
        }

        // CORRECTION 2 : Ajout des types (string, string, number)
        function setCookie(name: string, value: string, days: number) {
          const d = new Date();
          d.setTime(d.getTime() + 24 * 60 * 60 * 1000 * days);
          document.cookie =
            name + "=" + value + ";path=/;domain=" + window.location.hostname;
        }

        if (translateBtn) {
          if (getCookie("googtrans") === "/fr/en") {
            const textSpan = translateBtn.querySelector(".text");
            if (textSpan) textSpan.textContent = "FR";
          }
        }

        // CORRECTION 3 : V√©rification stricte que parentNode existe
        if (translateBtn && translateBtn.parentNode) {
          const newTranslateBtn = translateBtn.cloneNode(true);
          // TypeScript sait maintenant que parentNode n'est pas null ici
          translateBtn.parentNode.replaceChild(newTranslateBtn, translateBtn);

          newTranslateBtn.addEventListener("click", () => {
            const currentLang = getCookie("googtrans");

            if (currentLang === "/fr/en") {
              // Revenir en FR
              document.cookie =
                "googtrans=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
              document.cookie =
                "googtrans=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/; domain=" +
                window.location.hostname;
              location.reload();
            } else {
              // Forcer EN
              setCookie("googtrans", "/fr/en", 1);
              location.reload();
            }
          });
        }
      });
    </script>
  </body>
</html>

<style>
  :global(*),
  :global(*::before),
  :global(*::after) {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    font-family: "Lato", sans-serif;
    color: #333;
    line-height: 1.6;
    background-color: #fcfcfc;
  }
  main {
    flex: 1;
  }
  .site-header {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.04);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.8rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo-wrapper {
    display: flex;
    align-items: center;
    text-decoration: none;
    gap: 12px;
  }
  .logo-text {
    font-family: "Playfair Display", serif;
    font-weight: 700;
    font-size: 1.5rem;
    color: #2f4f4f;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  #menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    flex-direction: column;
    gap: 5px;
  }
  .hamburger-line {
    width: 25px;
    height: 3px;
    background-color: #2f4f4f;
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  .site-footer {
    background-color: #1a2e2e;
    color: #e0e0e0;
    padding-top: 4rem;
    margin-top: 4rem;
    border-top: 4px solid #c06c3b;
  }
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }
  .footer-logo {
    font-family: "Playfair Display", serif;
    font-size: 1.8rem;
    color: #fff;
    margin-bottom: 1rem;
  }
  h4 {
    font-family: "Playfair Display", serif;
    color: #c06c3b;
    margin-bottom: 1.2rem;
    font-size: 1.2rem;
  }
  .brand-desc {
    font-size: 0.95rem;
    opacity: 0.8;
    margin-bottom: 1.5rem;
    max-width: 300px;
  }

  .footer-links ul {
    list-style: none;
  }
  .footer-links li {
    margin-bottom: 0.8rem;
  }
  .footer-links a {
    color: #b0b0b0;
    text-decoration: none;
    transition: color 0.2s;
  }
  .footer-links a:hover {
    color: #c06c3b;
    padding-left: 5px;
  }
  .footer-newsletter p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    opacity: 0.8;
  }
  .newsletter-form {
    display: flex;
  }
  .newsletter-form input {
    padding: 10px;
    border: none;
    border-radius: 4px 0 0 4px;
    width: 100%;
    outline: none;
  }
  .newsletter-form button {
    background: #c06c3b;
    color: white;
    border: none;
    padding: 0 15px;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
    font-weight: bold;
    transition: background 0.3s;
  }
  .newsletter-form button:hover {
    background: #a05a2f;
  }
  .footer-contact p {
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
    opacity: 0.9;
  }
  .contact-btn-footer {
    display: inline-block;
    margin-top: 10px;
    font-size: 0.9rem;
    color: #c06c3b;
    text-decoration: none;
    border-bottom: 1px solid #c06c3b;
    padding-bottom: 2px;
  }
  .footer-bottom {
    background: #142424;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.85rem;
    color: #888;
  }
  @media (max-width: 900px) {
    .footer-container {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 600px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
    #menu-toggle {
      display: flex;
    }
  }
</style>
