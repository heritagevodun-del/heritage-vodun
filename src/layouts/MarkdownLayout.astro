---
import BaseLayout from "./BaseLayout.astro";
import FaAnimation from "../components/FaAnimation.astro"; // On importe le composant
const { frontmatter } = Astro.props;
---

<BaseLayout titrePage={frontmatter.title}>
  <article class="article-container">
    <header class="article-header">
      <p class="meta">
        {frontmatter.pubDate.slice(0, 10)} — {frontmatter.categorie}
      </p>
      <h1>{frontmatter.title}</h1>
      <div class="separator"></div>

      {/* LA LOGIQUE INTELLIGENTE */}
      {
        frontmatter.type_image === "animation_fa" ? (
          /* Cas 1 : C'est le Fâ -> On affiche l'animation en mode "hero" */
          <FaAnimation mode="hero" />
        ) : (
          /* Cas 2 : C'est normal -> On affiche l'image si elle existe */
          frontmatter.image && (
            <img
              src={frontmatter.image}
              alt={frontmatter.title}
              class="hero-image"
            />
          )
        )
      }
    </header>

    <div class="contenu-article">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  /* Gardez vos styles habituels ici, pas besoin de changer le CSS du layout */
  .article-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px 80px;
  }
  .article-header {
    text-align: center;
    margin-bottom: 50px;
  }
  .meta {
    font-family: "Lato", sans-serif;
    color: #a0522d;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 2px;
  }
  h1 {
    font-family: "Playfair Display", serif;
    font-size: 3rem;
    color: #2f4f4f;
    margin: 10px 0 30px;
    line-height: 1.2;
  }
  .separator {
    width: 60px;
    height: 4px;
    background-color: #d4af37;
    margin: 0 auto 40px;
  }
  .hero-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }
  .contenu-article {
    font-family: "Lato", sans-serif;
    font-size: 1.15rem;
    line-height: 1.8;
    color: #333;
  }
  .contenu-article :global(h2) {
    font-family: "Playfair Display", serif;
    color: #2f4f4f;
    margin-top: 40px;
    font-size: 2rem;
  }
</style>
